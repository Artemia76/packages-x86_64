description="Meson is an open source build system meant to be both extremely fast, as user friendly as possible"
url="http://mesonbuild.com/"

contributors="Jayce, Greg, tnut"
packager="fabienwang <fabienwang@nutyx.org>"

set=(devel)

name=meson
version=0.59.0

PKGMK_DEPENDS=(sqlite expat libffi python)
source=(0001-gnome-Always-pass-absolute-L-paths-to-g-ir-scanner.patch
	https://github.com/mesonbuild/$name/releases/download/$version/$name-$version.tar.gz)
prepare()
{
 cd $name-$version
 patch -Np1 -i ../0001-gnome-Always-pass-absolute-L-paths-to-g-ir-scanner.patch
}
build() {
  cd $name-$version
  python3 setup.py build
  python3 setup.py install --root=$PKG --optimize=1 --skip-build
}
