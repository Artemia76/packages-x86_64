PKGMK_GROUPS=(man)
PKGMK_IGNORE_RUNTIMEDEPS=yes

description="Base system of NuTyX, contains all folders and startup scripts."
url="https://github.com/nutyx"
packager="tnut at nutyx dot org"
maintainer="tnut at nutyx dot org"

name=nutyx
version=9.0
release=2
source=(nutyx-9.0-initrd-1.patch
	http://downloads.nutyx.org/files/$name-$version.tar.gz
	)
build () {
cd $name-$version
patch -Np1 -i ../nutyx-9.0-initrd-1.patch
make DESTDIR=$PKG install
}
