# Depends on: popt libgcrypt libgpg-error json-c

description="an utility used to conveniently setup disk encryption based on DMCrypt kernel module."
url="https://gitlab.com/cryptsetup/cryptsetup/"
contributors="Guy, Greg"
packager="tnut <tnut@nutyx.org>"

name=cryptsetup
version=2.0.3

source=(https://www.kernel.org/pub/linux/utils/cryptsetup/v2.0/$name-$version.tar.xz)

build() {

	cd $name-$version
	./configure --prefix=/usr --sbindir=/sbin --with-crypto_backend=openssl
        make
	make DESTDIR=$PKG install
	rm $PKG/usr/lib/libcryptsetup.la
}
