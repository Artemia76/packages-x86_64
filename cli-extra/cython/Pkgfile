# Depends on: python python2 python2-setuptools python-setuptools

description="C extensions for Python."
url="http://www.cython.org/"
packager="berlius at nutyx dot com, tnut at nutyx dot org"

name=cython
version=0.24
release=2
source=(https://pypi.python.org/packages/b1/51/bd5ef7dff3ae02a2c6047aa18d3d06df2fb8a40b00e938e7ea2f75544cac/Cython-$version.tar.gz)

build() {
	cd Cython-$version
	/usr/bin/python setup.py install --root $PKG
	/usr/bin/python3 setup.py install --root $PKG
}
