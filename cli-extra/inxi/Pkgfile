# Depends on: coreutils gawk grep pciutils procps-ng sed file iproute2 kmod sudo

description="script to get system information"
url="http://inxi.org"
packager="greg <greg@nutyx.org>"
contributors="Greg, Tnut"

name=inxi
version=2.3.52
release=1

source=(https://sources.archlinux.org/other/community/$name/$name-$version.tar.gz)

build() {

  cd $SRC
  
  install -D -m755 inxi $PKG/usr/bin/inxi
  install -D -m755 inxi.1.gz $PKG/usr/share/man/man1/inxi.1.gz
  
}

