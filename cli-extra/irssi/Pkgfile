description="Irssi is a terminal based IRC client for UNIX systems."
url="http://irssi.org/"
contributors="pierre"
packager="greg<greg@nutyx.org>"

# Depends on: glib openssl
run=( perl )

name=irssi
version=1.0.4
release=1

source=(https://github.com/irssi/irssi/releases/download/$version/$name-$version.tar.xz)

build() {

  cd $name-$version
  ./configure \
    --prefix=/usr \
    --sysconfdir=/etc \
    --with-proxy \
    --with-perl-lib=vendor
    
  make
  
}

package() {

  cd $name-$version
	make DESTDIR=$PKG install
	
}
