description="A parallel, SMP-based, bzip2-compatible compression utility"
url="http://lbzip2.org"
packager="greg<greg@nutyx.org>"

# Depends on: glibc

name=lbzip2
version=2.5
release=1

source=(http://archive.lbzip2.org/$name-$version.tar.bz2)


build() {

  cd $SRC/$name-$version
 
  ./configure --prefix=/usr
  make
  make check

}


package() {

    cd $SRC/$name-$version
	make DESTDIR=$PKG install 
	
}
