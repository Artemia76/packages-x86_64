contributors=""

name=libsodium
version=1.0.15
release=1

source=(https://download.libsodium.org/libsodium/releases/libsodium-$version.tar.gz)

prepare() {

}

build() {
cd $name-$version

  ./configure --prefix=/usr
  make
}

package() {
cd $name-$version
  make DESTDIR=$PKG install
}
