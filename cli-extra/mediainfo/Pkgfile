description="Show technical and tag informations about video or audio file."
url="https://mediaarea.net/"
contributors="NuTyX Team"
packager="greg<greg@nutyx.org>"

# Depends on: libmediainfo 

name=mediainfo
version=0.7.99
release=1

source=(https://mediaarea.net/download/source/mediainfo/$version/mediainfo_$version.tar.bz2)

build() {

  cd $SRC/MediaInfo/Project/GNU/CLI
  sh ./autogen.sh
  ./configure --prefix=/usr
  make
  
}


package() {


  cd $SRC/MediaInfo/Project/GNU/CLI
  make DESTDIR=$PKG install
  
  
}
