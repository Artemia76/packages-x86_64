# Depends on:

description="Backend utility to get cddb information"
url="http://lly.org/~rcw/cd-discid/"
packager="greg<greg@nutyx.org>"

name=cd-discid
version=1.4

source=(http://linukz.org/download/$name-$version.tar.gz)

build () {

    cd $name-$version
    make
}

package () {

cd $name-$version
make DESTDIR=$PKG \
        PREFIX=/usr  STRIP="/bin/true" \
        install
}
