description="The International Components for Unicode (ICU) package is a mature, widely used set of C/C++ libraries"
url="http://www.icu-project.org/"

packager="tnut <tnut@nutyx.org>"
contributors="Pierre B, Tnut, Remy"

makedepends=(llvm doxygen)

name=icu
version=65.1

PKGMK_GROUPS=(lib devel man)

source=(https://github.com/unicode-org/icu/releases/download/release-${version//./-}/icu4c-${version//./_}-src.tgz)

build () {
cd $name
cd source
./configure --prefix=/usr

make

make prefix=$PKG/usr install
}
