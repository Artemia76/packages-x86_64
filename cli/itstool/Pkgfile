description="XML to PO template files and back"
url="http://itstool.org/"

packager="Schrodinger72 <schrodinger@nutyx.org>"
contributors="Pierre B, Tnut"

makedepends=(autoconf automake libtool sed
             docbook-xml docbook-xsl libxml2 python2)

name=itstool
version=2.0.6
release=4

source=(http://files.itstool.org/itstool/$name-$version.tar.bz2)

prepare() {
  cd $name-$version
  sed -i 's/| python/&2/' configure.ac
  autoreconf -fvi
}

build() {
  cd $name-$version
  PYTHON=/usr/bin/python2 ./configure --prefix=/usr
  make
  make DESTDIR=$PKG install
}
