# Depends on: autoconf2-13 icu libffi nspr python2 zip

description="JS is Mozilla's JavaScript engine written in C."
url="https://people.mozilla.org"
packager="tnut <tnut@nutyx.org>"

name=js52
version=52.6.0

source=(http://ftp.gnome.org/pub/gnome/teams/releng/tarballs-needing-help/mozjs/mozjs-${version}gnome1.tar.gz)

build() {

  cd mozjs-52.2.1gnome1

  cd js/src

  ./configure --prefix=/usr       \
              --with-intl-api     \
              --with-system-zlib  \
              --with-system-nspr  \
              --with-system-icu   \
              --enable-threadsafe \
              --enable-readline

  make

  make DESTDIR=$PKG install

}
