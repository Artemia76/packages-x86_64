# Depends on: doxygen

description="Library utilities to manage software packages on NuTyX distribution."
url="https://git.tuxfamily.org/nutyx/cards.git"
maintainer="Tnut, Gianni"
packager="tnut <tnut@nutyx dot org>"
name=libcards
version=2.4.94
release=2

source=($name-$version-consolidate-1.patch
	http://downloads.tuxfamily.org/nutyx/files/cards-$version.tar.gz)
build () {
cd cards-$version
patch -Np1 -i ../$name-$version-consolidate-1.patch
make libs
make DESTDIR=$PKG install-libs
cd documentation
make DESTDIR=$PKG html install
}
doc() {
cd $PKG
bsdtar -cf \
$PKGMK_PACKAGE_DIR/${name}.doc${PKGMK_BUILDVER}any.cards.tar \
usr/share
rm -r usr/share
}
