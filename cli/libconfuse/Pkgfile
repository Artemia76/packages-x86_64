description="C-library for parsing configuration files"
url="https://github.com/martinh/libconfuse"
packager="tnut <tnut@nutyx.org>"
contributors="Greg <greg@nutyx.org>"

name=libconfuse
version=3.2
release=1

source=(https://github.com/martinh/libconfuse/releases/download/v$version/confuse-$version.tar.xz)

build() {

cd $SRC/confuse-$version
    
./configure --prefix=/usr --enable-shared
make
make check
	
}


package() {

cd $SRC/confuse-$version
make DESTDIR=$PKG install 

}
