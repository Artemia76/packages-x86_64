# Depends on: nasm openjdk cmake

description="JPEG image codec with accelerated baseline compression and decompression"
url="http://libjpeg-turbo.virtualgl.org/"
packager="rems <rems@nutyx.org>"
contributors=""

name=libjpeg-turbo2
version=2.0.1

source=(http://sourceforge.net/projects/libjpeg-turbo/files/$version/libjpeg-turbo-$version.tar.gz)

build() {
cd libjpeg-turbo-$version
sed 's/Szathm√°ry/Szathmary/g' -i java/org/libjpegturbo/turbojpeg/*.java
cmake -DWITH_JAVA=1 \
      -DWITH_JPEG8=1 \
      -DCMAKE_INSTALL_PREFIX=/usr \
      -DCMAKE_INSTALL_LIBDIR=/usr/lib \

make
make DESTDIR=$PKG \
docdir="/usr/share/doc/${pkgname}" \
exampledir="/usr/share/doc/${pkgname}" \
                  install
install -m 644 jpegint.h "${PKG}/usr/include" # required by other software
}
