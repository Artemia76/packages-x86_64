description="Linux kernel headers sanitized for use with musl libc"
url="http://www.kernel.org"
packager="tnut <tnut@nutyx.org>"

PKGMK_GROUPS=()

name=linux-headers-musl
version=4.14

source=($url/pub/linux/kernel/v4.x/linux-${version}.tar.xz)


build() {
cd linux-$version
make mrproper
make headers_check
make INSTALL_HDR_PATH=dest headers_install
mkdir -p $PKG/usr/include/musl
cp -rv dest/include/* $PKG/usr/include/musl
}
