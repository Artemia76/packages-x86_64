#Depends on: lzo

description="VPN client"
url="http://www.openvpn.net"
contributor="Graknu, Greg"
packager="tnut <tnut@nutyx.org>"

name=openvpn
version=2.4.6
release=2

source=(http://swupdate.openvpn.net/community/releases/$name-$version.tar.gz)

build(){
    cd $name-$version

    ./configure \
        --prefix=/usr \
        --enable-iproute2

    make
    make DESTDIR=$PKG install

    # Obsolets libs
    rm $PKG/usr/lib/openvpn/plugins/openvpn-plugin-auth-pam.la
    rm $PKG/usr/lib/openvpn/plugins/openvpn-plugin-down-root.la
}
