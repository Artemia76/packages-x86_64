makedepends=(python python-six)
run=(python)

name=python-astroid
version=2.11.1

source=(https://files.pythonhosted.org/packages/32/1d/242aac28594e49755f994e19386ffcb34805e1e0198a72af77cce9a2bfcf/astroid-$version.tar.gz)

build() {
    cd astroid-$version
    python3 setup.py check
    python3 setup.py install --prefix=/usr --root=$PKG
}
