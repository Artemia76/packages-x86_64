# Depends on: libxslt python

description="Python binding for the libxml2 and libxslt libraries"
url="http://lxml.de/"
packager="tnut@nutyx.org>"
contributors="Greg"

name=python-lxml
version=4.2.5

source=(https://files.pythonhosted.org/packages/source/l/lxml/lxml-$version.tar.gz
)

	
build() {
export LC_CTYPE=en_US.UTF-8

cd lxml-$version
python3 setup.py build
python3 setup.py install --root=$PKG --skip-build --optimize=1
}
