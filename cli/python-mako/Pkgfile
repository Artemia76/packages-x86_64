description="Implements hyperfast and lightweight templating for the Python platform."
url="https://pypi.org/project/Mako/"

packager="tnut <tnut@nutyx.org>"
contributors="Spiky"

makedepends=(python python-markupsafe)

name=python-mako
version=1.2.3
release=2

source=(https://files.pythonhosted.org/packages/b9/38/c25f0874ea71802fc6f1e9f0f88a7e9666818121b28991bbc1d8eddbcdb1/Mako-1.2.3.tar.gz)


build() {

cd Mako-$version
python3 setup.py install --root=$PKG --optimize=1
}
