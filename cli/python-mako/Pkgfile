description="Implements hyperfast and lightweight templating for the Python platform."
url="https://pypi.org/project/Mako/"
packager="DocWOPR <worp@contrepoison.ch>"

makedepends=(python python-markupsafe)

name=python-mako
version=1.2.2

source=(https://files.pythonhosted.org/packages/6d/f2/8ad2ec3d531c97c4071572a4104e00095300e278a7449511bee197ca22c9/Mako-1.2.2.tar.gz)


build() {

cd Mako-$version
python3 setup.py install --root=$PKG --optimize=1
}
