# Description: SWIG (Simplified Wrapper and Interface Generator) is a compiler that integrates C and C++ with languages including Perl, Python, Tcl, Ruby, PHP, Java, C#, D, Go, Lua, Octave, R, Scheme, Ocaml, Modula-3, Common Lisp, and Pike.
# URL: http://www.swig.org/
# Packagers: pierre at nutyx dot org, tnut at nutyx dot org
# Depends on: pcre 

name=swig
version=3.0.8
release=1

source=("http://downloads.sourceforge.net/$name/$name-$version.tar.gz")

build() {
cd $name-$version
./configure --prefix=/usr \
--without-clisp \
--without-maximum-compile-warnings
make
make DESTDIR=$PKG install
install -v -m755 -d $PKG/usr/share/doc/$name-$version
cp -v -R Doc/* \
$PKG/usr/share/doc/$name-$version
install -D -m644 LICENSE $PKG/usr/share/licenses/$name/LICENSE
}
