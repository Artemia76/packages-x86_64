description="Utilities to monitor system performance and usage activity."
url="http://perso.wanadoo.fr/sebastien.godard"
packager="fanch at nutyx dot org, tnut at nutyx dot org, pierre at nutyx dot org"

name=sysstat
version=11.5.6
release=1
source=($url/$name-$version.tar.xz)
 
build() {
cd $name-$version
	   
source  /etc/blfs-bootscripts
wget http://www.linuxfromscratch.org/blfs/downloads/svn/$scripts-$scriptsversion.tar.bz2
tar xvf $scripts-$scriptsversion.tar.bz2 

sa_lib_dir=/usr/lib/sa    \
sa_dir=/var/log/sa        \
conf_dir=/etc/sysconfig   \
./configure --prefix=/usr \
            --disable-file-attr 
make
make DESTDIR=$PKG install
	
cd $scripts-$scriptsversion
make DESTDIR=$PKG install-sysstat
}
