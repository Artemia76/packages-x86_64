version=1.9.0

source=(http://freefr.dl.sourceforge.net/sourceforge/conky/$name-$version.tar.gz)

build() {
cd $name-$version
CPPFLAGS="${CXXFLAGS}" LIBS="${LDFLAGS}" LUA_LIBS="-llua5.1" LUA_CFLAGS="-I/usr/include/lua5.1" \
./configure --prefix=/usr      \
            --sysconfdir=/etc  \
            --enable-wlan      \
	    --enable-rss       \
	    --enable-ibm       \
	    --enable-imlib2    \
	    --enable-lua       \
            --enable-lua-cairo \
            --enable-lua-imlib2
make
make DESTDIR=$PKG install
}
  
