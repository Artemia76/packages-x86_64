name=binutils
version=2.25.1
build() {
cd $name-$version
mkdir -v ../binutils-build
cd ../binutils-build
AR=ar AS=as ../binutils-$_binutils/configure  \
   --prefix=/cross-tools    \
   --host=${CLFS_HOST}  \
   --target=${CLFS_TARGET}   \
   --with-sysroot=${CLFS}   \
   --with-lib-path=/tools/lib  \
   --disable-nls   \
   --disable-static  \
   --disable-multilib   \
   --enable-gold=yes  \
   --enable-plugins   \
   --enable-threads  \
   --disable-werror
make
make install
}
