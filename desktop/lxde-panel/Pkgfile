name=lxde-panel
_name=lxpanel
version=0.8.1
release=1

source=(http://downloads.sourceforge.net/lxde/files/${_name}-$version.tar.xz)

build() {
cd ${_name}-$version
./configure --prefix=/usr
make
make DESTDIR=$PKG install
}
