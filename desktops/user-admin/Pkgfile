description="Mate Desktop users administatration Tool"
url="https://github.com/zhuyaliang/user-admin"

packager="tnut <tnut@nutyx.org>"

set=(mate)

makedepends=(gobject-introspection mate-desktop group-service
             accountsservice meson ninja vala libpwquality)

name=user-admin
version=1.5.1

PKGMK_KEEP_SOURCES="no"

source=(user-admin-fixe-1.patch
        https://github.com/zhuyaliang/group-service/archive/$version.tar.gz)
prepare() {
cd $name-$version
patch -Np1 -i ../user-admin-fixe-1.patch
}
build=meson
