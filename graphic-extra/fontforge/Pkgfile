# Description: Outline and bitmap font editor
# URL: http://fontforge.sourceforge.net
# Packager: pierre at nutyx dot org
# Depends on: git xorg-libxi libxml2 pango giflib libtiff 

name=fontforge
version=2.0.20140101
release=1

source=(http://anduin.linuxfromscratch.org/sources/other/fontforge-$version.tar.xz)

build() {
        cd $name-$version
        sed "/DGifCloseFile/s:gif:&, NULL:g" -i gutils/gimagereadgif.c
        ./configure --prefix=/usr    \
            --disable-static \
            --docdir=/usr/share/doc/fontforge-$version
        make
        make DESTDIR=$PKG install
}
