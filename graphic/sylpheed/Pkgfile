# Description: Lightweight and user-friendly e-mail client
# URL: http://sylpheed.sraoss.jp/en/
# Packager: pierre at nutyx dot org
# Depends on: atk,expat,freetype,glib,libpng,pcre,cairo,cyrus-sasl,xorg-fontconfig,libassuan,libgpg-error,openldap,pango,gtk,gpgme,desktop-file-utils

name=sylpheed
version=3.4.3
release=1

source=(http://sylpheed.sraoss.jp/sylpheed/v${version%.*}/$name-$version.tar.bz2)

build() {
        cd $name-$version
        ./configure --prefix=/usr \
        --enable-static=no \
        --disable-gtkspell \
        --disable-gtktest \
        --disable-compface \
        --enable-gpgme \
        --enable-ssl \
        --enable-ldap

        make
        make DESTDIR=$PKG install
        rm -r $PKG/usr/share/sylpheed
}
