# Depends on: cmake sqlite ffmpeg qt4
description="A graphical tool to edit video (filter/re-encode/split) - Qt GUI"
packager="tnut at nutyx dot org"
maintainer="tnut at nutyx dot org"
url="http://fixounet.free.fr/avidemux/"
name=avidemux
version=2.6.15
release=1
source=(
http://downloads.sourceforge.net/project/avidemux/avidemux/${version}/avidemux_${version}.tar.gz)

build() {
cd ${name}_$version
unset PKG
unset MAKEFLAGS
unset CFLAGS
unset CXXFLAGS
bash bootStrap.bash
PKG=$PKGMK_WORK_DIR/pkg
mv install/usr \
$PKG


mkdir -p $PKG/usr/share/{applications,pixmaps,man/man1}
sed "s@avidemux2_gtk@avidemux3_qt4@" avidemux2.desktop \
> $PKG/usr/share/applications/avidemux.desktop

install -Dm 644 avidemux_icon.png \
$PKG/usr/share/pixmaps/avidemux.png

install -Dm 644 man/avidemux.1 -t \
$PKG/usr/share/man/man1
}
