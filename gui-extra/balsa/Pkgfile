# Depends on: aspell enchant gmime libesmtp rarian pcre gtksourceview2 gtksourceview libnotify kerberos sendmail openldap openssl sqlite webkitgtk2 gtkhtml procmail 

description="The Balsa package contains a GNOME based mail client."
url="https://pawsa.fedorapeople.org/balsa/"
packager="tnut <tnut@nutyx.org>"
contributors="Berlius"

name=balsa
version=2.5.2	
release=1
source=(http://pawsa.fedorapeople.org/balsa/$name-$version.tar.bz2)
 
build() {

	cd $name-$version
	
	./configure --prefix=/usr            \
	            --sysconfdir=/etc        \
	            --localstatedir=/var/lib \
	            --with-ssl               \
	            --with-rubrica           \
	            --without-html-widget    \
	            --without-libnotify      \
	            --without-gtkspell       
	make

	make DESTDIR=$PKG install
		
}
