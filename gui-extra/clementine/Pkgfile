# Depends on: git cmake boost qtbase qtx11extras qttools sparsehash mesa libcdio libmtp protobuf taglib chromaprint glew gstreamer gstreamer-plugins-base gstreamer-plugins-good gstreamer-plugins-ugly gstreamer-plugins-bad gvfs crypto++

description="A music player and library organizer"
url="http://www.clementine-player.org/"
packager="tnut <tnut@nutyx.org>"
contributors="Pierre B"

run=(gstreamer-plugins-base gstreamer-plugins-good gstreamer-plugins-ugly gstreamer-plugins-bad gvfs)

name=clementine
version=1.3.1
release=2

source=( ded3126.patch e31278.patch )
#	https://github.com/clementine-player/Clementine/archive/$version.tar.gz)

build() {
   
   git clone -b qt5  https://github.com/clementine-player/Clementine.git
   cd Clementine

   mkdir build
   cd    build

   cmake .. \
      -DCMAKE_INSTALL_PREFIX=/usr  \
      -DCMAKE_BUILD_TYPE='Release'
   make -j1
   make DESTDIR=$PKG install
}
