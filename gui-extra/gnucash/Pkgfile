description="Personal and small-business financial-accounting application"
url="https://gnucash.org/"

packager="tnut <tnut@nutyx.org>"

makedepends=(cmake boost guile libdbi webkitgtk gtest
            gwenhywfar aqbanking libofx libdbi-drivers)
run=(desktop-file-utils)

name=gnucash
version=3.10
release=2

source=(gnucash-3.10-consolidate-1.patch
        https://downloads.sourceforge.net/$name/$name-${version}.tar.gz)

build() {
cd $name-$version
patch -Np1 -i ../gnucash-3.10-consolidate-1.patch
cmake -DCMAKE_INSTALL_PREFIX=/usr \
      -DCMAKE_INSTALL_LIBDIR=/usr/lib \
      -DCOMPILE_GSCHEMAS=OFF
make
make DESTDIR=$PKG install
}
