# Depends on:  vim, gtk2, xorg-libxt

description="GTK version of the vim editor"
url="http://www.vim.org/"
packager="fanch at nutyx dot org, tnut at nutyx"
name=gvim
version=8.0
release=1
run=(vim)
source=(ftp://ftp.vim.org/pub/vim/unix/vim-$version.tar.bz2)

build () {
    cd vim${version/./}/src
    
    ./configure --prefix=/usr \
                --with-vim-name=gvim \
                --with-x=yes \
                --enable-gui=gtk2 \
                --enable-multibyte \
                --disable-gpm

    make
    make runtime
    make DESTDIR=$PKG installvimbin
    make DESTDIR=$PKG install-icons
}
