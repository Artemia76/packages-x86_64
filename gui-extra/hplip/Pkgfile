# Depends on: python2-sip avahi python ghostscript foomatic-db foomatic-db-engine usbutils sane cups cups-filters libusb-compat net-snmp dbus-python python2-gobject2 python2-notify python2-qt python2-qt4

description="Drivers for HP DeskJet, OfficeJet, Photosmart, Business Inkjet and some LaserJet"
url="http://hplipopensource.com"
contributors="tnut"
packager="greg<greg@nutyx.org>"

run=(python2-sip dbus-python python2-qt python2-gobject2 python2-notify python2-qt4)

source=(http://downloads.sourceforge.net/$name/$name-$version.tar.gz)


name=hplip
version=3.17.11

source=(http://downloads.sourceforge.net/$name/$name-$version.tar.gz
0022-Add-include-cups-ppd.h-in-various-places-as-CUPS-2.2.patch
disable_upgrade.patch
)


build() {

        cd $name-$version
 
	patch -Np0 -i $SRC/disable_upgrade.patch
	patch -Np1 -i $SRC/0022-Add-include-cups-ppd.h-in-various-places-as-CUPS-2.2.patch

        export AUTOMAKE='automake --foreign'
        autoreconf --force --install

        ./configure --prefix=/usr \
                --enable-qt5  \
		--disable-qt4 \
                --disable-foomatic-rip-hplip-install \
                --enable-foomatic-ppd-install \
                --enable-hpcups-install \
                --enable-new-hpcups \
                --enable-cups-ppd-install \
                --enable-cups-drv-install \
                --enable-hpijs-install \
                --enable-foomatic-drv-install \
                --enable-pp-build \
                --enable-dbus-build  \
                --enable-scan-build \
                --enable-fax-build \
                --disable-network-build
        make
	make DESTDIR=$PKG install || make -j1 DESTDIR=$PKG install

        # remove config provided by sane and autostart of hp-daemon
        rm -rf $PKG/etc/{sane.d,xdg}

        # remove HAL .fdi file because HAL is no longer used
        rm -vrf $PKG/usr/share/hal
}
