# Depends on: boost gc gsl gtkmm imagemagick libxslt poppler-glib popt dejavu-ttf python2 desktop-file-utils hicolor-icon-theme

description="Professional vector graphics editor"
url="https://inkscape.org/"
packager="pierre at nutyx dot org"

name=inkscape
version=0.92.1
release=1

source=(https://inkscape.org/gallery/item/10682/inkscape-0.92.1.tar_XlpI7qT.bz2)

build() {
  tar -xf inkscape-0.92.1.tar_XlpI7qT.bz2
  cd $name-$version
  ./autogen.sh
  ./configure \
	--prefix=/usr \
	--with-python \
	--with-perl   \
	--enable-lcms \
	--enable-poppler-cairo \
	--disable-strict-build \
	--disable-dependency-tracking
   make
   make DESTDIR=$PKG install
}
