# Depends on: python perl-archive-zip unzip zip icu cups poppler-glib xorg-fontconfig libxslt kerberos xorgproto dbus-glib mesa postgresql wget apache-ant apr boost clucene dbus-glib libepoxy libjpeg-turbo2 xorg-glu gstreamer-plugins-base libatomic-ops lcms2 librsvg libxml2 libxslt mesa neon nss redland serf unixodbc desktop-file-utils doxygen gdb gnutls mariadb nasm telepathy-glib xmlsec gpgme

PKGMK_IGNORE_UNPACK="yes"

description="Office suite. It is largely compatible with Microsoft Office (fork from OpenOffice.org)."
url="http://www.libreoffice.org"
packager="tnut <tnut@nutyx.org>"
contributors="Pierre B, Tnut, Greg"
run=(shared-mime-info xdg-utils desktop-file-utils) 
name=libreoffice
version=6.2.0.3
release=2

source=(http://download.documentfoundation.org/libreoffice/src/${version%.*}/$name-$version.tar.xz
	http://download.documentfoundation.org/libreoffice/src/${version%.*}/$name-dictionaries-$version.tar.xz
	http://download.documentfoundation.org/libreoffice/src/${version%.*}/$name-help-$version.tar.xz
	http://download.documentfoundation.org/libreoffice/src/${version%.*}/$name-translations-$version.tar.xz
	
        0001-Remove-check-if-root-due-to-issue-with-fakeroot.patch)
prepare() {
        unset ACLOCAL

        tar -xf $name-$version.tar.xz --no-overwrite-dir

        cd $name-$version
        patch -Np1 -i ../0001-Remove-check-if-root-due-to-issue-with-fakeroot.patch
	sed -i 's/loaded;/bool{loaded};/' sfx2/source/appl/shutdownicon.cxx


        install -dm755 external/tarballs/
        ln -sv ../../../$name-dictionaries-$version.tar.xz  external/tarballs/
        ln -sv ../../../$name-help-$version.tar.xz          external/tarballs/
        ln -sv ../../../$name-translations-$version.tar.xz  external/tarballs/

	sed -e "/gzip -f/d"   \
	-e "s|.1.gz|.1|g" \
	-i bin/distro-install-desktop-integration

	sed -e "/distro-install-file-lists/d" -i Makefile.in
}
build() {
cd $name-$version
./autogen.sh --prefix=/usr \
	--sysconfdir=/etc \
	--with-vendor="NuTyX" \
	--with-lang="ar cs es de fr el ga gl hi hr hu it ja lt lv pt fi nb nl nn da sv tr ro sq sk sl sr th uk ru pl zh-CN"   \
	--with-help                 \
	--with-myspell-dicts        \
	--without-junit             \
	--without-system-dicts      \
	--disable-dconf             \
	--disable-odk               \
	--enable-release-build=yes  \
	--enable-python=system      \
	--with-system-apr           \
	--with-system-boost         \
	--with-system-cairo         \
	--with-system-clucene       \
	--with-system-curl          \
	--with-system-epoxy         \
	--with-system-expat         \
	--with-system-gpgmepp       \
	--with-system-icu           \
	--with-system-jpeg          \
	--with-system-lcms2         \
	--with-system-libatomic_ops \
	--with-system-libpng        \
	--with-system-libxml        \
	--with-system-mariadb       \
	--with-system-neon          \
	--with-system-nss           \
	--with-system-odbc          \
	--with-system-openldap      \
	--with-system-openssl       \
	--with-system-poppler       \
	--with-system-postgresql    \
	--with-system-redland       \
	--with-system-serf          \
	--with-system-zlib          \
	--with-parallelism=$(getconf _NPROCESSORS_ONLN)

	make build-nocheck
	make DESTDIR=$PKG distro-pack-install

	# Dictionaries installation
	chown -cR 0:0 dictionaries/ 
	for lang in en fr_FR es de it_IT pt_PT no nl_NL sv_SE da_DK ru_RU
	do
	  mkdir -pv $PKG/usr/lib/$name/share/extensions/dict-$lang
	  cp -R dictionaries/$lang/* $PKG/usr/lib/$name/share/extensions/dict-$lang
	done
        
	# Nettoyage
	rm -rf $PKG/gid_Module_*
}
