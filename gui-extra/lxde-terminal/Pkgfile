# Depends on: intltool vte

description="Terminal emulator without any unnecessary dependencies"
contributors="tnut"
packager="greg <greg@nutyx.org>"
url="http://lxde.org/"

name=lxde-terminal
alias=(lxterminal)
_name=lxterminal
version=0.3.0
release=2

source=(https://downloads.sourceforge.net/lxde/lxterminal-$version.tar.xz
		Fix-CVE-2016-10369.patch)


prepare() {

  cd ${_name}-$version
  patch -Np1 -i ../Fix-CVE-2016-10369.patch
  
}


build() {

	cd ${_name}-$version
	./configure --prefix=/usr \ --enable-gtk3
	make

}


package() {

	cd ${_name}-$version
	make DESTDIR=$PKG install

    }
