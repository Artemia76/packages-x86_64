# Depends on: ffmpeg jansson xorg-libxinerama libxkbcommon qtx11extras curl jack gtk-update-icon-cache cmake fdk-aac xorg-libxcomposite x264

description="Free, open source software for live streaming and recording"
url="https://obsproject.com"
packager="greg<greg@nutyx.org>"

name=obs-studio
version=20.0.1
release=1

source=(https://github.com/jp9000/obs-studio/archive/$version.tar.gz)

build() {

	cd $name-$version

	mkdir -p build; cd build
	cmake -DCMAKE_INSTALL_PREFIX="/usr" \
		-DOBS_VERSION_OVERRIDE="$version-$release" ..
	make

}

package() {

    cd $name-$version/build
	make DESTDIR=$PKG install
  
}
