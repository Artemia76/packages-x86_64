# Description : ownCloud client based on mirall
# URL: http://owncloud.org/
# Packager: pierre at nutyx dot org
# Depends on: cmake extra-cmake-modules sqlite3 qtbase qtkeychain qtwebkit

name=owncloud-cli
release=1
version=2.4.0
_name=owncloudclient

source=(https://download.owncloud.com/desktop/stable/${_name}-$version.tar.xz)

build() {

mkdir build
cd    build

cmake ../$_name-$version            \
        -DCMAKE_INSTALL_PREFIX=/usr \
        -DCMAKE_INSTALL_LIBDIR=lib  \
        -DCMAKE_BUILD_TYPE=Release  \
        -DCMAKE_INSTALL_SYSCONFDIR=/etc/$name \
        
make
make DESTDIR=$PKG install
}

