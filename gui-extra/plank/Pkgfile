# Depends on: atk cairo gdk-pixbuf glib gtk3 libgee libwnck xorg-libx11 xorg-libxfixes xorg-libxi pango bamf

description="Elegant, simple, clean dock"
url="https://launchpad.net/plank"

packager="tnut <tnut@nutyx.org>"

name=plank
version=0.11.4

source=(https://launchpad.net/plank/1.0/$version/+download/plank-$version.tar.xz)

build() {

 cd $name-$version
 ./configure --prefix=/usr --sysconfdir=/etc --disable-apport

 make

 make DESTDIR=$PKG install

}
