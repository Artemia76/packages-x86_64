# Depends on: gtk3 python-gobject dbus-python python-cairo mutagen dbus-glib gstreamer-plugins-base gstreamer-plugins-good gstreamer-plugins-ugly feedparser intltool 

description="A python audio library tagger, manager and player"
url="https://github.com/quodlibet/quodlibet"
packager="tnut at nutyx dot org"
name=quodlibet
version=4.0.2
release=1
run=(mutagen gtk3 python-gobject dbus-python python-cairo gstreamer-plugins-base gstreamer-plugins-good gstreamer-plugins-ugly )
source=(https://github.com/quodlibet/quodlibet/archive/release-$version.tar.gz)

build() {

  cd $name-release-$version/$name

sed -e 's|vendor-completions|site-functions|' -i gdist/zsh_completions.py

  python3 setup.py build
  python3 setup.py install --root=$PKG
}
