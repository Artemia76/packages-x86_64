# Depends on: qt-webengine qt-x11extras mesa desktop-file-utils hicolor-icon-theme gdb

# Description: "A fast open source browser based on QtWebengine, written in Qt Framework
# URL: http://www.qupzilla.com/
# Maintainer: Chris Farrell, timcowchip at gmail dot com

name=qupzilla
version=2.1.2
release=5
_name=QupZilla

source=("https://github.com/timcowchip/DISTFILES/raw/master/$_name-$version.tar.xz")

build() {
    cd $_name-$version/

    export USE_WEBGL="true"
    #export NO_X11="true"
   
    /usr/bin/qmake 
    make

    make INSTALL_ROOT=${PKG}/ install
}
