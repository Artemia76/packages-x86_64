# Depends on: cmake startup-notification ninja setconf xorg-libxrandr librsvg gtk2 imlib2

description="Basic, good-looking task manager for WMs"
url="https://gitlab.com/o9000/tint2"
packager="greg<greg@nutyx.org>"
contributors=""

name=tint2
version=15.2
release=1

source=(http://crux.ster.zone/downloads/$name/$name-$version.tar.bz2)



build() {
	cd $name-$version-*

	cmake \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_BUILD_TYPE=Release \
		-DENABLE_TINT2CONF=OFF \
		-G Ninja

	ninja
}

package() {

	cd $name-$version-*
	DESTDIR=$PKG ninja install
	rm -r $PKG/{etc,usr/share/doc}
}
