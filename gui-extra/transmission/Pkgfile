description="Light and fast Bittorent client (GTK Interface)"
url="https://www.transmissionbt.com/"

packager="Tnut <tnut@nutyx.org>"
contributors="Alienus, Tnut, Remy"

makedepends=(curl libevent openssl gtk3 doxygen gdb)
run=(desktop-file-utils gtk-update-icon-cache
     hicolor-icon-theme shared-mime-info)
name=transmission

version=3.00
release=3

source=(transmission-3.00-openssl-3.patch 
        https://raw.githubusercontent.com/transmission/transmission-releases/master/$name-$version.tar.xz)

prepare() {
 cd $name-$version
 patch -Np1 -i ../transmission-3.00-openssl-3.patch
}


build() {

export CFLAGS+=" -ffat-lto-objects"
cd $name-$version
./configure --prefix=/usr \
                --disable-cli \
                --disable-daemon \
                --without-qt
make
make DESTDIR=$PKG install
}
