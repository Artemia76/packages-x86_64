# Depends on: git

description="A fast URL matcher library"
url="https://github.com/clbr/"
packager="greg<greg@nutyx.org>"

name=urlmatch
alias=(liburlmatch)
version=1.0
release=1

source=(https://github.com/clbr/urlmatch/archive/v$version.tar.gz)
	
build() {

cd urlmatch-$version
make


}

package() {

cd urlmatch-$version
make install DESTDIR=$PKG

}
