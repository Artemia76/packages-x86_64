# Depends on: dbus libconfig libev pcre mesa xorg-libxcomposite xorg-libxinerama xorg-libxrandr xorg-libxdamage freeglut xcb-util-renderutil xcb-util-image

description="A compositor for X, and a fork of xcompmgr-dana."
url="http://github.com/chjj/compton"
packager="tnut <tnut@nutyx.org>"
contributors="greg <greg@nutyx.org>"

name=compton
version=4.0
release=1

PKGMK_KEEP_SOURCES="no"

source=(https://github.com/yshui/compton/archive/v4.tar.gz
		compton.conf)

run=(libconfig)

build() {

	cd compton-${version:0:1}

mkdir -pv build
cd build
meson --prefix=/usr
ninja
DESTDIR=$PKG ninja install
install -Dm644 $SRC/compton.conf $PKG/etc/xdg/compton.conf
	
}
