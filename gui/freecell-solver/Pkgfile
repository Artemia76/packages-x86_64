description="A program that automatically solves layouts of Freecell or variants"
url="https://fc-solve.shlomifish.org"

packager="tnut <tnut@nutyx.org>"
contributors="Rems"

makedepends=(python-random2 python-six cmake gperf perl-path-tiny perl-template-toolkit)

name=freecell-solver
version=5.14.0

source=(https://fc-solve.shlomifish.org/downloads/fc-solve/$name-$version.tar.xz)

build() {
mkdir -pv build
cd build
cmake ../$name-$version \
      -DCMAKE_INSTALL_PREFIX=/usr \
      -DFCS_WITH_TEST_SUITE=OFF \
      -DBUILD_STATIC_LIBRARY=OFF
make 
make DESTDIR=$PKG install
}
