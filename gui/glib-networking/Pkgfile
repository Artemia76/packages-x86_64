# Depends on: meson ninja glib dbus gnutls libgcrypt gsettings-desktop-schemas p11-kit 

description="Network-related giomodules for glib"
url="http://www.gnome.org/"
packager="tnut <tnut@nutyx.org>"
contributors="Pierre B"

run=( gsettings-desktop-schemas )

name=glib-networking
version=2.60.1

source=(http://www.linuxfromscratch.org/patches/blfs/svn/glib-networking-$version-upstream_fixes-1.patch
	http://ftp.gnome.org/pub/gnome/sources/$name/${version:0:4}/$name-$version.tar.xz)

build () {

cd $name-$version
patch -Np1 -i ../glib-networking-$version-upstream_fixes-1.patch
mkdir build
cd    build

meson --prefix=/usr            \
      -Dlibproxy=disabled
ninja
DESTDIR=$PKG ninja install
}
uptodate(){
local latest lastversion url
url="http://ftp.gnome.org/pub/gnome/sources/$name"
latest="`lynx -read_timeout=20 -dump -listonly -nonumbers \
$url/?C=N\;O=D|grep [0-9]/$|head -1`"
lastversion="`lynx -read_timeout=20 -dump -listonly -nonumbers \
$latest/?C=N\;O=D|grep LATEST|grep [0-9]$|cut -d "-" -f4`"
echo "$lastversion"
}
