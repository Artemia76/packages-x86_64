description="The GNOME Bluetooth Subsystem"
url="https://wiki.gnome.org/Projects/GnomeBluetooth"

packager="Tnut <tnut@nutyx.org>"
contributors="Spiky"

makedepends=(itstool libnotify gtk3 gobject-introspection meson
             gtk-doc libcanberra gsound libadwaita)
run=(gtk-update-icon-cache bluez)

name=gnome-bluetooth-3
version=42.4

source=(https://gitlab.gnome.org/GNOME/gnome-bluetooth/-/archive/${version}/gnome-bluetooth-$version.tar.gz)

prepare() {
 mv gnome-bluetooth-$version $name-$version
}

build=meson
