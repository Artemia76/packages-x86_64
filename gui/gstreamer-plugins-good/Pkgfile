# Depends on: aalib jack lame libcaca libdv libgudev mpg123 speex wavpack v4l-utils taglib libshout libraw1394 gstreamer-plugins-base flac gdk-pixbuf libjpeg-turbo libpng libsoup libvpx pulseaudio

description="GStreamer Multimedia Framework good Plugins"
url="http://gstreamer.freedesktop.org/"
packager="tnut <tnut@nutyx.org>"
contributors="Pierre B"

_name=gst-plugins-good

name=gstreamer-plugins-good
version=1.14.4

source=(http://gstreamer.freedesktop.org/src/${_name}/${_name}-$version.tar.xz)

build() {
cd ${_name}-$version
./configure --prefix=/usr \
--with-package-name="GStreamer Good Plugins $version NuTyX" \
--with-package-origin="http://downloads.nutyx.org/"
make
make DESTDIR=$PKG install
}
uptodate() {
local url ext
name=${_name}
url="https://gstreamer.freedesktop.org/src/$name/"
ext=".tar.xz"
lynx -read_timeout=20 -dump -listonly -nonumbers \
$url|grep $name-[0-9]|grep $ext$|sed "s@$url$name-@@"|sed "s@$ext@@"|tail -1
}
