description="A VNC viewer widget for GTK"
url="http://live.gnome.org/gtk-vnc"

packager="tnut <tnut@nutyx.org>"
contributors="Fanch, Tnut, Rems"

makedepends=(libgcrypt intltool vala gobject-introspection gtk3
             python2-gtk gnutls pulseaudio cyrus-sasl)

name=gtk-vnc
version=1.0.0

source=(http://ftp.gnome.org/pub/gnome/sources/$name/${version%.*}/$name-$version.tar.xz)

build() {
	cd $name-$version
	./configure --prefix=/usr  \
            --with-gtk=3.0 \
            --enable-vala \
            --with-examples 
	make
	make DESTDIR=$PKG install

# Obsolets libs
rm $PKG/usr/lib/libgvnc-1.0.la
rm $PKG/usr/lib/libgvncpulse-1.0.la
rm $PKG/usr/lib/libgtk-vnc-2.0.la
}
