description="GObject-based multi-platform GUI toolkit"
url="https://www.gtk.org"

packager="spiky <spiky@nutyx.org>"
contributors=""

makedepends=(git meson gtk-doc glib2-docs python sassc gobject-introspection)
run=(glib2 cairo pango fribidi gdk-pixbuf2 libepoxy libgl libegl harfbuzz
     libxkbcommon graphene iso-codes tracker colord wayland wayland-protocols
     desktop-file-utils adwaita-icon-theme cantarell-fonts shared-mime-info
     json-glib ffmpeg dconf gstreamer-plugins-bad librsvg xorg-libxinerama xorg-libxrandr
     xorg-libxcursor xorg-libxi xorg-libxrender )
set=()

name=gtk4
version=4.0.3

source=(https://download.gnome.org/sources/gtk/${version%.*}/gtk-$version.tar.xz)

build() {
cd $name-$version
mkdir build
cd build
meson --prefix=/usr           \
--sysconfdir=/etc             \
-Denable-broadway_backend=true \
-Denable-tracker=true          \
-Denable-colord=true           \
-Denable-man-pages=true        \
..
ninja
DESTDIR=$PKG ninja install
}

