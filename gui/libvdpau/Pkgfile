description="Video Acceleration vdpau for Linux"
url="https://01.org/linuxmedia/vaapi"

packager="tnut <tnut@nutyx.org>"
contributors="Remy"

makedepends=(meson ninja xorg-libxfixes doxygen graphviz)

name=libvdpau
version=1.3

source=(https://gitlab.freedesktop.org/vdpau/libvdpau/-/archive/$name/$name-$version.tar.bz2)

build() {

cd $name-$version

mkdir build
cd    build

meson --prefix=/usr \
--sysconfdir=/etc \
--localstatedir=/var \
--docdir=/usr/share/doc/libvdpau-$version

ninja 

DESTDIR=$PKG ninja install
}
