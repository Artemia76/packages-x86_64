contributors="tnut at nutyx dot org"
packager="Sipo at nutyx dot org"
description="Extremely fast and lightweight file manager (GTK+ 3 version)"
url="http://lxde.org/"

# Depends on: libfm lxde-menu-data intltool

name=pcmanfm
version=1.2.5
release=2

source=(https://downloads.sourceforge.net/$name/$name-$version.tar.xz
		Fix-CVE-2017-8934.patch
		)

prepare() {
  cd $name-$version
  patch -Np1 -i ../Fix-CVE-2017-8934.patch
}

build() {

	cd $name-$version
	./configure --sysconfdir=/etc --prefix=/usr --with-gtk=3
	make

	}


package() {

	cd $name-$version
	make DESTDIR=$PKG install

    }
