# Depends on: qt-base qt-declarative

description="A cross-platform application and UI framework, QtCharts files"
url="http://qt-project.org/"
packager="pierre at nutyx dot org"

name=qt-charts 
version=5.8.0-rc
release=1

_name="${name/5-/}-opensource-src-${version}"

source=(https://download.qt.io/development_releases/qt/5.8/$version/submodules/${_name}.tar.xz)

build() {
cd ${_name}
qmake-qt
make
make INSTALL_ROOT=$PKG install
}
