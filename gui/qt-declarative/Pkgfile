# Depends on: qt mesa 

description="A cross-platform application and UI framework, QtDeclarative files"
url="http://qt-project.org/"
packager="pierre at nutyx dot org"

name=qt-declarative 
release=2

_name="${name/-/}-opensource-src-${version}"

source=(https://download.qt.io/development_releases/qt/5.8/$version/submodules/${_name}.tar.xz)

build() {
cd ${_name}
qmake
make
make INSTALL_ROOT=$PKG install

mkdir -p $PKG/usr/bin
for i in $PKG/usr/bin/qt/*; do 
    ln -sv /usr/bin/qt/$(basename $i) $PKG/usr/bin/$(basename $i)-qt
done
}
