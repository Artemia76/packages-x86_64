# Depends on: qt-base qt-location qt-sensors qt-webchannel qt-doc qt-tools ruby icu libjpeg-turbo libpng libwebp libxslt 

description="Classes for a WebKit2 based implementation and a new QML API"
url="http://qt-project.org/"
packager="pierre at nutyx dot org"

name=qt-webkit
version=5.8.0-beta
release=2

_name="qtwebkit-opensource-src"

source=(http://download.qt.io/community_releases/5.8/$version/${_name}-${version}.tar.xz
        qt-webkit-default_prf.patch)

build() {
  cd ${_name}-${version}
  patch -p1 -i ../qt-webkit-default_prf.patch
  qmake
  make
  make INSTALL_ROOT="$PKG" install
}
