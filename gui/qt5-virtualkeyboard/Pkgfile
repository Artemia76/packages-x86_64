# Depends on: qt5-declarative qt5-svg hunspell

description="A cross-platform application and UI framework, QtVirtualKeyboard files"
url="http://qt-project.org/"
packager="pierre at nutyx dot org"

name=qt5-virtualkeyboard
version=5.8.0-rc
release=1

_name="${name/5-/}-opensource-src-${version}"

source=(https://download.qt.io/development_releases/qt/5.8/$version/submodules/${_name}.tar.xz)

build() {
cd ${_name}
qmake-qt5 CONFIG+="lang-all handwriting"
make
make INSTALL_ROOT=$PKG install
}
