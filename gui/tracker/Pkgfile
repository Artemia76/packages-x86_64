# Depends on: json-glib icu networkmanager python2 sqlite upower libsoup vala gtk-doc desktop-file-utils gtk-update-icon-cache libseccomp

description="Semantic data storage"
url="http://www.gnome.org"
packager="tnut <tnut@nutyx.org>"
contributors="Tnut, Jayce"
run=(desktop-file-utils gtk-update-icon-cache)

name=tracker
version=2.1.6

source=(http://ftp.gnome.org/pub/gnome/sources/$name/${version%.*}/$name-$version.tar.xz)

build(){
	cd $name-$version
	./configure --prefix=/usr             \
        	    --sysconfdir=/etc         \
	            --disable-static          \
        	    --disable-unit-tests      \
	            --disable-miner-evolution \
        	    --disable-miner-firefox   \
	            --disable-miner-thunderbird
   make
   make DESTDIR=$PKG install

# Obsolets libs
rm $PKG/usr/lib/libtracker-control-2.0.la
rm $PKG/usr/lib/libtracker-miner-2.0.la
rm $PKG/usr/lib/libtracker-sparql-2.0.la
rm $PKG/usr/lib/tracker-2.0/libtracker-common.la
rm $PKG/usr/lib/tracker-2.0/libtracker-data.la
}
