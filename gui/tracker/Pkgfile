# Depends on: meson ninja json-glib icu networkmanager python2 sqlite upower libsoup vala gtk-doc desktop-file-utils gtk-update-icon-cache libseccomp

description="Semantic data storage"
url="http://www.gnome.org"
packager="tnut <tnut@nutyx.org>"
contributors="Tnut, Jayce"
run=(desktop-file-utils gtk-update-icon-cache)

name=tracker
version=2.2.0

source=(http://ftp.gnome.org/pub/gnome/sources/$name/${version%.*}/$name-$version.tar.xz)

build(){

  cd $name-$version
  mkdir build
  cd    build
  meson --prefix=/usr --sysconfdir=/etc
  ninja
  
  DESTDIR=$PKG ninja install

}
