description="Collection of data extractors for Tracker/Nepomuk"
url="http://www.gnome.org"

packager="tnut <tnut@nutyx.org>"
contributors="Tnut, Jayce"

run=(desktop-file-utils gtk-update-icon-cache)
makedepends=(meson ninja exempi libgrss flac libexif
             libgsf libseccomp libvorbis poppler-glib
             tracker2 upower enca)


_name=tracker-miners
version=2.3.5

source=(https://download.gnome.org/sources/${_name}/${version:0:3}/${_name}-$version.tar.xz)

build() {
mkdir build
cd    build
meson --prefix=/usr \
../tracker-miners-$version
ninja
DESTDIR=$PKG ninja install
}

