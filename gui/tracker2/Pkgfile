description="Semantic data storage"
url="http://www.gnome.org"

packager="tnut <tnut@nutyx.org>"
contributors="Jayce"

makedepends=(meson ninja json-glib icu networkmanager python
             sqlite upower libsoup vala gtk-doc libseccomp)
run=(desktop-file-utils gtk-update-icon-cache)

_name=tracker
version=2.3.6
release=2

source=(https://download.gnome.org/sources/${_name}/${version:0:3}/${_name}-$version.tar.xz)
build() {
mkdir build
cd    build

meson --prefix=/usr \
../tracker-$version
ninja
DESTDIR=$PKG ninja install
}
