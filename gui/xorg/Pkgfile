# Depends on: mtdev xorg-libxvmc xorg-server xcb-util xorg-xkeyboard-config xorg-twm xorg-term xorg-xclock xorg-xinit libevdev

description="Xorg Keyboard, Mouse and Video drivers"
packager="tnut <tnut@nutyx.org>"

run=(xorg-font xorg-xkeyboard-config xorg-server xorg-twm xorg-term xorg-xclock xorg-xinit)
section="driver"

alias=( xf86-input-evdev xf86-input-synaptic xf86-input-vmmouse xf86-input-wacom xf86-video-ati xf86-video-fbdev xf86-video-nouveau xf86-video-nouveau xf86-video-nouveau xf86-video-vesa xf86-video-vmware)
name=xorg
version=7.7
release=16

source=()

build() {
cat > list.md5 << "EOF"
94c2c8354c74ab1cfbbb0a222078b9c6  xf86-input-evdev-2.10.5.tar.bz2
58e5b7722a402114093bf193962d1e3a  xf86-input-synaptics-1.9.0.tar.bz2
85e2e464b7219c495ad3a16465c226ed  xf86-input-vmmouse-13.1.0.tar.bz2
cb137465f139bb014883b0d7b0c500b2  xf86-input-wacom-0.35.0.tar.bz2
bf3dfdae23879bdc0c8a7b955572ad90  xf86-video-ati-7.9.0.tar.bz2
3931c0e19d441cc576dc088f9eb9fd73  xf86-video-fbdev-0.4.4.tar.bz2
717203cb87029cddcbccf7398f9ad8c3  xf86-video-nouveau-1.0.15.tar.bz2
316aaf97eb152eef71dac70c349fb8c7  xf86-video-openchrome-0.5.0.tar.bz2
a893c37c589f7a31cea929a5d896a0e2  xf86-video-vesa-2.3.4.tar.bz2
4c3912e4d8947f6c2fc1ee9e2f211d74  xf86-video-vmware-13.2.1.tar.bz2
EOF
unset MAKEFLAGS
for package in $(grep -v '^#' list.md5 |cut -d " " -f 3)
	do
		packagedir=$(echo $package | sed 's/.tar.bz2//')
		packagename=$(echo $package | sed 's/.tar.bz2//')
		case $packagename in
			xf86-input-wacom-[0-9]*)
				wget http://downloads.sourceforge.net/linuxwacom/$package;;
			*)
				wget http://ftp.x.org/archive//individual/$section/$package;;
		esac
		grep $package list.md5 |md5sum -c -
		tar -xf $package

		pushd $packagedir
		case $packagename in
		xf86-input-vmmouse-[0-9]*)
			./configure --prefix=/usr --sysconfdir=/etc --localstatedir=/var \
            --with-udev-rules-dir=/lib/udev/rules.d \
            --without-hal-callouts-dir \
            --without-hal-fdi-dir;;
		xf86-input-wacom-[0-9]*)
			./configure --prefix=/usr --sysconfdir=/etc --localstatedir=/var --with-systemd-unit-dir=no;;
		*)
			./configure --prefix=/usr --sysconfdir=/etc --localstatedir=/var;;
		esac
		make
		make DESTDIR=$PKG install
		popd
	done

# Intel is a bit different
wget  ftp://anduin.linuxfromscratch.org/BLFS/xf86-video-intel/xf86-video-intel-20170216.tar.bz2
tar -xf xf86-video-intel-20170216.tar.bz2
cd xf86-video-intel
./configure --prefix=/usr \
--sysconfdir=/etc \
--localstatedir=/var \
--enable-kms-only \
--enable-uxa \
--mandir=/usr/share/man
make 
make DESTDIR=$PKG install

# Rearrange a bit
mv -v $PKG/usr/share/man/man4/intel-virtual-output.4 \
      $PKG/usr/share/man/man1/intel-virtual-output.1 &&
sed -i '/\.TH/s/4/1/' \
      $PKG/usr/share/man/man1/intel-virtual-output.1
}
