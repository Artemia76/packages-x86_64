
source=(http://download.kde.org/stable/$version/src/kde-l10n/kde-l10n-\
{ar,bg,bs,ca,ca@valencia,cs,da,de,el,en_GB,es,et,eu,fi,fr,ga,gl,he,hi,hr,\
hu,ia,id,is,it,ja,kk,km,ko,lt,lv,mr,nb,nds,nl,nn,pa,pl,pt,pt_BR,ro,ru,sk,\
sl,sr,sv,tr,ug,uk,wa,zh_CN}-$version.tar.xz)
build() {
for lang in kde-l10n-*
do

        cd $SRC/${lang}
        mkdir build
        cd build
        cmake -DCMAKE_INSTALL_PREFIX=/usr -Wno-dev ..
        make
        make DESTDIR=$PKG install
done
}
