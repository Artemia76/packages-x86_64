version=4.14.2-53-gdd470bb

source=(http://www.linuxfromscratch.org/~krejzi/pkgs/ark-$version.tar.xz)

build() {
cd ark-$version
mkdir build
cd build
cmake -DCMAKE_INSTALL_PREFIX=/usr        \
      -DCMAKE_BUILD_TYPE=Release         \
      -DLIB_INSTALL_DIR=lib              \
      -DBUILD_TESTING=OFF                \
      -DQT_PLUGIN_INSTALL_DIR=lib/qt5/plugins \
      ..
make
make DESTDIR=$PKG install
}
