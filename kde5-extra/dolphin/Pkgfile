# Description : Parts of framework 5
# URL: https://www.kde.org/
# Packager: pierre at nutyx dot org
# Depends on: kf5-extra-cmake-modules kf5-kdoctools kf5-knewstuff kio-extras baloo-widgets kf5-ktexteditor kf5-kactivities plasma-kde-cli-tools kf5-kdelibs4support kde-libs automoc4 

name=dolphin
release=3
version=15.08.1

source=(http://download.kde.org/stable/applications/$version/src/$name-$version.tar.xz)

build() {
cd $SRC/$name-$version
mkdir build
cd    build
cmake -DCMAKE_INSTALL_PREFIX=/usr         \
      -DCMAKE_BUILD_TYPE=Release          \
      -DLIB_INSTALL_DIR=lib               \
      -DBUILD_TESTING=OFF                 \
      -DKDE_INSTALL_USE_QT_SYS_PATHS=ON   \
      -Wno-dev ..
make
make DESTDIR=$PKG install
}


