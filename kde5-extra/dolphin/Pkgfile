# Description : Parts of framework 5
# URL: https://www.kde.org/
# Packager: pierre at nutyx dot org
# Depends on: kde5 baloo-widgets

name=dolphin
release=2
version=15.08.1

source=(http://download.kde.org/stable/applications/$version/src/$name-$version.tar.xz
        http://download.kde.org/stable/applications/$version/src/kde-baseapps-$version.tar.xz)

build() {
cd $name-$version
mkdir build
cd    build
cmake -DCMAKE_INSTALL_PREFIX=/usr             \
      -DCMAKE_BUILD_TYPE=Release              \
      -DLIB_INSTALL_DIR=lib                   \
      -DBUILD_TESTING=OFF                     \
      -DKDE_INSTALL_USE_QT_SYS_PATHS=ON       \
      -Wno-dev ..
make
make DESTDIR=$PKG install

install -Dm644 $SRC/kde-baseapps-$version/lib/konq/konq*.desktop $PKG/usr/share/kservicetypes5/
}

