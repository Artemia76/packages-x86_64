# Depends on : kf5-extra-cmake-modules kf5-kdoctools qt5 boost calendarsupport kdiagram kf5-kdesignerplugin 

description="Library for creating events "
url="https://community.kde.org/KDE_PIM"
packager="pierre at nutyx dot org"
name=eventviews
version=16.11.80
release=1

source=(http://download.kde.org/unstable/applications/$version/src/$name-$version.tar.xz)

build() {
  mkdir build
  cd build
  cmake ../$name-$version \
    -DCMAKE_BUILD_TYPE=Release        \
    -DCMAKE_INSTALL_PREFIX=/usr       \
    -DCMAKE_INSTALL_LIBDIR=lib        \
    -DBUILD_TESTING=OFF
  make
  make DESTDIR=$PKG install
}
