# Depends on: qtbase extra-cmake-modules phonon-qt kio kactivities kdelibs4support libjpeg-turbo libpng exiv2 lcms2 baloo hicolor-icon-theme libkdcraw libkipi

description="Fast and easy to use image viewer for KDE 5"
url="https://www.kde.org/"
packager="tnut <tnut@nutyx.org>"
contributors="Pierre B"

name=gwenview
release=1
version=17.08.1

source=(http://download.kde.org/stable/applications/$version/src/$name-$version.tar.xz)

build() {
cd $name-$version
mkdir build
cd    build
cmake -DCMAKE_INSTALL_PREFIX=/usr \
      -DCMAKE_BUILD_TYPE=Release  \
      -DKDE_INSTALL_LIBDIR=lib    \
      -DGWENVIEW_SEMANTICINFO_BACKEND="Baloo" \
      -DBUILD_TESTING=OFF         \
      -Wno-dev ..
make
make DESTDIR=$PKG install
}
