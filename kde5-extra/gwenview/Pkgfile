# Depends on: qt-base kf5-extra-cmake-modules phonon-qt kf5-kio kf5-kactivities kf5-kdelibs4support libjpeg-turbo libpng exiv2 lcms2 kf5-baloo   hicolor-icon-theme libkdcraw libkipi

description=" fast and easy to use image viewer for KDE 5"
url="https://www.kde.org/"
packager="pierre at nutyx dot org"

name=gwenview
release=1
version=16.12.0

source=(http://download.kde.org/stable/applications/$version/src/$name-$version.tar.xz)

build() {
cd $name-$version
mkdir build
cd    build
cmake -DCMAKE_INSTALL_PREFIX=/usr \
      -DCMAKE_BUILD_TYPE=Release  \
      -DLIB_INSTALL_DIR=lib       \
      -DGWENVIEW_SEMANTICINFO_BACKEND="Baloo" \
      -DBUILD_TESTING=OFF         \
      -Wno-dev ..
make
make DESTDIR=$PKG install
}

