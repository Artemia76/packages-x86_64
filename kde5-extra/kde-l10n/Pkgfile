# Description: translation of KDE4
# URL: http://www.kde.org
# Packager: pierre at nutyx dot org
# Depends on: extra-cmake-modules kde-libs docbook-xsl kf5-kdoctools

name=kde-l10n
version=15.08.0
release=1

source=(http://download.kde.org/stable/applications/$version/src/kde-l10n/kde-l10n-{da,de,es,fi,fr,it,nl,nn,pt,sv}-$version.tar.xz)

build() {
for lang in kde-l10n-*
do
cd $SRC/${lang}

mkdir build
cd build
cmake -DCMAKE_INSTALL_PREFIX=/usr \
      -DCMAKE_BUILD_TYPE=Release       \
      -Wno-dev ..
make
make DESTDIR=$PKG install
done
}


