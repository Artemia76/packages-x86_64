# Description :  Many Localization for KDE5
# URL : http:/$langwww.kde.org
# Packager : pierre at nutyx dot org
# Depends on : kde-libs automoc4 cmake kf5-extra-cmake-modules kf5-ki18n kf5-kdoctools phonon

name=kde5-l10n
version=15.08.1
release=1

source=()

build() {

for lang in da de es fi fr it nb nl pt sv
do
  cd $SRC
  wget http://download.kde.org/stable/applications/$version/src/kde-l10n/kde-l10n-$lang-$version.tar.xz
  tar xf kde-l10n-$lang-$version.tar.xz
  cd kde-l10n-$lang-$version
  cmake -DCMAKE_INSTALL_PREFIX=/usr \
        -DCMAKE_BUILD_TYPE=Release
  make
  make DESTDIR=$PKG install

  rm $PKG/usr/share/locale/$lang/LC_MESSAGES/attica_kde.mo 
  rm $PKG/usr/share/locale/$lang/LC_MESSAGES/baloo*
  rm $PKG/usr/share/locale/$lang/LC_MESSAGES/drkonqi*
  rm $PKG/usr/share/locale/$lang/LC_MESSAGES/filetypes.mo
  rm $PKG/usr/share/locale/$lang/LC_MESSAGES/freespacenotifier.mo
  rm $PKG/usr/share/locale/$lang/LC_MESSAGES/htmlsearch.mo
  rm $PKG/usr/share/locale/$lang/LC_MESSAGES/joystick.mo
  rm $PKG/usr/share/locale/$lang/LC_MESSAGES/kaccess.mo
  rm $PKG/usr/share/locale/$lang/LC_MESSAGES/kcm-kwin-scripts.mo
  rm $PKG/usr/share/locale/$lang/LC_MESSAGES/kfilemetadata.mo
  rm $PKG/usr/share/locale/$lang/LC_MESSAGES/kfontinst.mo
  rm $PKG/usr/share/locale/$lang/LC_MESSAGES/khelpcenter.mo
  rm $PKG/usr/share/locale/$lang/LC_MESSAGES/khotkeys.mo
  rm $PKG/usr/share/locale/$lang/LC_MESSAGES/kinfocenter.mo
  rm $PKG/usr/share/locale/$lang/LC_MESSAGES/plasma_applet*
  rm $PKG/usr/share/locale/$lang/LC_MESSAGES/plasma_engine*
  rm $PKG/usr/share/locale/$lang/LC_MESSAGES/plasma_runner*
  rm $PKG/usr/share/locale/$lang/LC_MESSAGES/powerdevil*
  rm $PKG/usr/share/locale/$lang/LC_MESSAGES/kcm*
  rm $PKG/usr/share/locale/$lang/LC_MESSAGES/kio*
  rm $PKG/usr/share/locale/$lang/LC_MESSAGES/kdesu.mo
  rm $PKG/usr/share/locale/$lang/LC_MESSAGES/klipper.mo
  rm $PKG/usr/share/locale/$lang/LC_MESSAGES/kmenuedit.mo
  rm $PKG/usr/share/locale/$lang/LC_MESSAGES/kmimetypefinder.mo
  rm $PKG/usr/share/locale/$lang/LC_MESSAGES/knetattach.mo
  rm $PKG/usr/share/locale/$lang/LC_MESSAGES/konqprofiles.mo
  rm $PKG/usr/share/locale/$lang/LC_MESSAGES/konsoleprofiles.mo
