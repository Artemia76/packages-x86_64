  rm $PKG/usr/share/locale/$lang/LC_MESSAGES/krunner.mo
  rm $PKG/usr/share/locale/$lang/LC_MESSAGES/kscreenlocker.mo
  rm $PKG/usr/share/locale/$lang/LC_MESSAGES/kscreenlocker_greet.mo
  rm $PKG/usr/share/locale/$lang/LC_MESSAGES/ksgrd.mo
  rm $PKG/usr/share/locale/$lang/LC_MESSAGES/ksmserver.mo
  rm $PKG/usr/share/locale/$lang/LC_MESSAGES/kstart.mo
  rm $PKG/usr/share/locale/$lang/LC_MESSAGES/ksysguard.mo
  rm $PKG/usr/share/locale/$lang/LC_MESSAGES/ksysguardlsofwidgets.mo
  rm $PKG/usr/share/locale/$lang/LC_MESSAGES/ktraderclient.mo
  rm $PKG/usr/share/locale/$lang/LC_MESSAGES/kwin.mo
  rm $PKG/usr/share/locale/$lang/LC_MESSAGES/kwin_clients.mo
