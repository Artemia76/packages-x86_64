# Depends on : qtspeech extra-cmake-modules khtml threadweaver kactivities kdelibs4support kpty libkscreen freetype poppler-qt libspectre djvulibre qca-qt libkexiv2 chmlib  zlib ebook-tools kdoctools phonon-qt kdegraphics-mobipocket
   
description="Document Viewer"
url="http://www.kde.org"
packager="tnut <tnut@nutyx.org>"
contributors="Pierre B"

run=(kdegraphics-mobipocket)

name=okular
version=17.08.1
release=1

source=(http://download.kde.org/stable/applications/$version/src/$name-$version.tar.xz)

build() {
  cd $name-$version
  mkdir build
  cd build
  cmake -DCMAKE_BUILD_TYPE=Release   \
        -DCMAKE_INSTALL_PREFIX=/usr  \
        -DSYSCONF_INSTALL_DIR=/etc   \
        -DPLUGIN_INSTALL_DIR=/usr/lib/qt/plugins \
        -DKDE_INSTALL_LIBDIR=lib         \
        -Wno-dev ..
  make
  make DESTDIR=$PKG install
}
