# Depends on : qt-speech kf5-extra-cmake-modules kf5-khtml kf5-threadweaver kf5-kactivities kf5-kdelibs4support kf5-kpty plasma-libkscreen freetype poppler-qt libspectre djvulibre qca-qt libkexiv2 chmlib  zlib ebook-tools kf5-kdoctools phonon-qt kdegraphics-mobipocket
   
description="Document Viewer"
url="http://www.kde.org"
packager="pierre at nutyx dot og"
run=(kdegraphics-mobipocket)

name=okular
version=16.12.1
release=2

source=(http://download.kde.org/stable/applications/$version/src/$name-$version.tar.xz)

build() {
  cd $name-$version
  mkdir build
  cd build
  cmake -DCMAKE_BUILD_TYPE=Release   \
        -DCMAKE_INSTALL_PREFIX=/usr  \
        -DSYSCONF_INSTALL_DIR=/etc   \
        -DPLUGIN_INSTALL_DIR=/usr/lib/qt/plugins \
        -DLIB_INSTALL_DIR=lib         \
        -Wno-dev ..
  make
  make DESTDIR=$PKG install
}
