# Description: Document Viewer
# URL: http://www.kde.org
# Packager: pierre at nutyx dot org
# Depends on: kde-libs freetype qimageblitz poppler-qt5 libspectre djvulibre qca kde-activities

name=okular
version=15.07.90
release=1

source=(http://download.kde.org/unstable/applications/$version/src/$name-$version.tar.xz )

build() {
cd $name-$version
mkdir build
cd build
cmake -DCMAKE_INSTALL_PREFIX=/usr \
      -DSYSCONF_INSTALL_DIR=/etc/kde   \
      -DCMAKE_BUILD_TYPE=Release       \
      -DWITH_ActiveApp=OFF             \
      -Wno-dev ..
make
make DESTDIR=$PKG install
}
