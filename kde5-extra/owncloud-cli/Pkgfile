# Description : ownCloud client based on mirall
# URL: http://owncloud.org/
# Packager: pierre at nutyx dot org
# Depends on: kf5-extra-cmake-modules qt5 qtkeychain-qt5

name=owncloud-cli
release=1
version=2.0.1
_name=owncloudclient

source=(https://download.owncloud.com/desktop/stable/${_name}-$version.tar.xz
       owncloud-cli-fix-tray-icon.patch)

build() {

cd $_name-$version
patch -p1 -i ../owncloud-cli-fix-tray-icon.patch

cd ../
mkdir build
cd    build

cmake ../$_name-$version            \
        -DCMAKE_INSTALL_PREFIX=/usr \
        -DCMAKE_INSTALL_LIBDIR=lib  \
        -DCMAKE_BUILD_TYPE=Release  \
        -DCMAKE_INSTALL_SYSCONFDIR=/etc/$name \
        
make
make DESTDIR=$PKG install
}

