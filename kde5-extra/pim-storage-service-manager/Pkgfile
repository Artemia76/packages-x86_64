# Depends on : boost kf5-extra-cmake-modules kf5-kdoctools kf5-knotifyconfig pimcommon 

description="KDE PIM storage services configuration UI"
url="https://projects.kde.org/pim-storage-service-manager"
packager="pierre at nutyx dot org"

name=pim-storage-service-manager
version=16.12.1
release=1

source=(http://download.kde.org/stable/applications/$version/src/$name-$version.tar.xz)

build() {
  mkdir -p build
  cd build
  cmake ../$name-$version \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DCMAKE_INSTALL_LIBDIR=lib \
    -DBUILD_TESTING=OFF \
    -Wno-dev
  make
  make DESTDIR=$PKG install
}
