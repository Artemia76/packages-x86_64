# Depends on: extra-cmake-modules kcoreaddons kwidgetsaddons kdbusaddons knotifications kconfig ki18n kio kxmlgui kwindowsystem xcb-proto xcb-util-cursor xcb-util-renderutil libkscreen libkipi kdeclarative

description="Makes taking screenshots"
url="https://www.kde.org/"
packager="tnut <tnut@nutyx.org>"
contributors="Pierre B"

name=spectacle
version=17.08.2

source=(http://download.kde.org/stable/applications/$version/src/$name-$version.tar.xz )

build() {
cd $SRC/$name-$version
mkdir build
cd    build
cmake -DCMAKE_INSTALL_PREFIX=/usr \
      -DCMAKE_BUILD_TYPE=Release  \
      -DKDE_INSTALL_LIBDIR=lib    \
      -DBUILD_TESTING=OFF         \
      -Wno-dev ..
make
make DESTDIR=$PKG install
}

uptodate() {
feed=https://github.com/KDE/$name/releases.atom 
exec="lynx -read_timeout=20 -dump -listonly -nonumbers $feed"
ligne=1 # nombre de notification ? afficher
$exec $feed | grep title | \
sed "s@<title>@@" | \
sed "s@</title>@@" | \
sed "s@v@@" | sed "s@ @@g" | \
head -n $(($ligne+1 )) | \
tail -n $(($ligne))
}
