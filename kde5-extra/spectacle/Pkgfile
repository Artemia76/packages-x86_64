# Depends on: extra-cmake-modules kcoreaddons kwidgetsaddons kdbusaddons knotifications kconfig ki18n kio kxmlgui kwindowsystem xcb-proto xcb-util-cursor xcb-util-renderutil libkscreen libkipi kdeclarative

description="Makes taking screenshots"
url="https://www.kde.org/"
packager="tnut <tnut@nutyx.org>"
contributors="Pierre B"

name=spectacle
version=17.08.1
release=1

source=(http://download.kde.org/stable/applications/$version/src/$name-$version.tar.xz )

build() {
cd $SRC/$name-$version
mkdir build
cd    build
cmake -DCMAKE_INSTALL_PREFIX=/usr \
      -DCMAKE_BUILD_TYPE=Release  \
      -DKDE_INSTALL_LIBDIR=lib    \
      -DBUILD_TESTING=OFF         \
      -Wno-dev ..
make
make DESTDIR=$PKG install
}
