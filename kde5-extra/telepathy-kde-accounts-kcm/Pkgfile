# Description: KCM Module for configuring Telepathy Instant Messaging Accounts 
# URL: http://community.kde.org/Real-Time_Communication_and_Collaboration
# Packager: pierre at nutyx dot org
# Depends on: kf5-extra-cmake-modules telepathy-qt5 kaccounts-providers intltool 

_name=ktp-accounts-kcm
release=1

build() {
  mkdir -p build
  cd build
  cmake ../ktp-accounts-kcm-$version \
    -DCMAKE_INSTALL_PREFIX=/usr  \
    -DCMAKE_BUILD_TYPE=Release   \
    -DBUILD_TESTING=OFF
  make
  make DESTDIR=$PKG install
}
