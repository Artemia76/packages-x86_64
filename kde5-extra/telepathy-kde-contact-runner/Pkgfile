# Description: KRunner plugin for KDE Telepathy
# URL: http://community.kde.org/Real-Time_Communication_and_Collaboration
# Packager: pierre at nutyx dot org
# Depends on: kf5-extra-cmake-modules kf5-kdoctools telepathy-kde-common-internals kf5-krunner 

name=telepathy-kde-contact-runner
version=16.04.2
release=2

source=(http://download.kde.org/stable/applications/$version/src/ktp-contact-runner-$version.tar.xz)

build() {
  mkdir -p build
  cd build
  cmake ../ktp-contact-runner-$version \
    -DCMAKE_INSTALL_PREFIX=/usr  \
    -DCMAKE_BUILD_TYPE=Release   \
    -DBUILD_TESTING=OFF
  make
  make DESTDIR=$PKG install
}
