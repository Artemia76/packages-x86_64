version=4.14.2-342-g056ca25

source=(http://www.linuxfromscratch.org/~krejzi/pkgs/kde-baseapps-$version.tar.xz)

build() {
cd kde-baseapps-$version
mkdir build
cd    build

cmake -DCMAKE_INSTALL_PREFIX=/usr             \
      -DCMAKE_BUILD_TYPE=Release              \
      -DSYSCONF_INSTALL_DIR=/etc/kf5          \
      -DLIB_INSTALL_DIR=lib                   \
      -DBUILD_TESTING=OFF                     \
      -DQT_PLUGIN_INSTALL_DIR=lib/qt5/plugins \
      ..
make
make DESTDIR=$PKG install
}
