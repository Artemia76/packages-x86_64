version=4.13.80-48-g8c7d33c

source=(http://www.linuxfromscratch.org/~krejzi/pkgs/kmix-$version.tar.xz)

build() {
cd kmix-$version
mkdir build
cd    build

cmake -DCMAKE_INSTALL_PREFIX=/usr             \
      -DCMAKE_BUILD_TYPE=Release              \
      -DSYSCONF_INSTALL_DIR=/etc/kf5          \
      -DLIB_INSTALL_DIR=lib                   \
      -DBUILD_TESTING=OFF                     \
      -DKMIX_KF5_BUILD=1                      \
      -DQT_PLUGIN_INSTALL_DIR=lib/qt5/plugins \
      ..
make
make DESTDIR=$PKG install
}
