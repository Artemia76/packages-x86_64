version=1.0.2.1-107-gd6380ef 

source=(http://www.linuxfromscratch.org/~krejzi/pkgs/kscreen-$version.tar.xz)

build() {
cd kscreen-$version
mkdir build
cd    build

cmake -DCMAKE_INSTALL_PREFIX=/usr        \
      -DCMAKE_BUILD_TYPE=Release         \
      -DLIB_INSTALL_DIR=lib              \
      -DBUILD_TESTING=OFF                \
      -DQT_PLUGIN_INSTALL_DIR=lib/qt5/plugins \
      ..
make
make DESTDIR=$PKG install
}

