version=4.14.1-63-gd21f487

source=( http://www.linuxfromscratch.org/~krejzi/pkgs/libkexiv2-$version.tar.xz)

build() {
cd libkexiv2-$version
mkdir build
cd build
cmake -DCMAKE_INSTALL_PREFIX=/usr \
      -DCMAKE_BUILD_TYPE=Release  \
      -DLIB_INSTALL_DIR=lib       \
      -DBUILD_TESTING=OFF         \
      .. 
make
make DESTDIR=$PKG install
}

