version=0.99.1-20-gcecfca6

source=(http://www.linuxfromscratch.org/~krejzi/pkgs/polkit-kde-agent-1-$version.tar.xz)

build() {
cd polkit-kde-agent-1-$version
mkdir build
cd    build

cmake -DCMAKE_INSTALL_PREFIX=$KF5_PREFIX    \
      -DCMAKE_BUILD_TYPE=Release            \
      -DSYSCONF_INSTALL_DIR=$KF5_SYSCONFDIR \
      -DLIB_INSTALL_DIR=lib                 \
      -DBUILD_TESTING=OFF                   \
      ..
make
make DESTDIR=$PKG install
}
