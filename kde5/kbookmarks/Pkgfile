# Depends on: qtbase kcodecs kconfig kcoreaddons kiconthemes kwidgetsaddons kconfigwidgets  kxmlgui

description="Support for bookmarks and the XBEL format "
url="https://www.kde.org/"
packager="tnut <tnut@nutyx.org>"
contributors="Pierre B"

name=kbookmarks
version=5.38.0
release=1

source=(http://download.kde.org/stable/frameworks/${version%.*}/${name}-$version.tar.xz)

build() {
mkdir build
cd    build
cmake ../${name}-$version         \
      -DCMAKE_INSTALL_PREFIX=/usr \
      -DCMAKE_BUILD_TYPE=Release  \
      -DKDE_INSTALL_LIBDIR=lib    \
      -DBUILD_TESTING=OFF
make
make DESTDIR=$PKG install
}
