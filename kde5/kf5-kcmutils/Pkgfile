# Depends on: qt-base kf5-kauth kf5-kconfig kf5-kconfigwidgets kf5-kcoreaddons kf5-kdeclarative kf5-ki18n kf5-kiconthemes kf5-kitemviews kf5-kservice kf5-kwidgetsaddons kf5-kxmlgui pciutils

description="Utilities for interacting with KCModules "
url="https://www.kde.org/"
packager="pierre at nutyx dot org"
alias=(kcmutils)

_name=kcmutils
release=1

build() {
cd ${_name}-$version
mkdir build
cd    build
cmake -DCMAKE_INSTALL_PREFIX=/usr \
      -DCMAKE_BUILD_TYPE=Release  \
      -DKDE_INSTALL_LIBDIR=lib       \
      -DBUILD_TESTING=OFF         \
      -Wno-dev ..
make
make DESTDIR=$PKG install
}

