# Depends on: kf5-extra-cmake-modules qt5-base qt5-tools shared-mime-info

description="Addons to QtCore "
url="https://www.kde.org/"
packager="pierre at nutyx dot org"
alias=(kcoreaddons)

run=(shared-mime-info)

_name=kcoreaddons
release=1

build() {
cd ${_name}-$version
mkdir build
cd    build
cmake -DCMAKE_INSTALL_PREFIX=/usr   \
        -DCMAKE_BUILD_TYPE=Release  \
        -DLIB_INSTALL_DIR=lib       \
        -DBUILD_TESTING=OFF         \
        -Wno-dev ..
make
make DESTDIR=$PKG install
}

