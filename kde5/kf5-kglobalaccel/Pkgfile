# Description : Add support for global workspace shortcuts 
# URL: https://www.kde.org/
# Packager: pierre at nutyx dot org
# Depends on: kf5-kconfig kf5-kcoreaddons kf5-kcrash kf5-kdbusaddons kf5-kwindowsystem libxcb xcb-util-keysyms kf5-kservice

_name=kglobalaccel
release=1

build() {
cd ${_name}-$version
mkdir build
cd    build
cmake -DCMAKE_INSTALL_PREFIX=/usr \
      -DCMAKE_BUILD_TYPE=Release  \
      -DLIB_INSTALL_DIR=lib       \
      -DBUILD_TESTING=OFF         \
      -Wno-dev ..
make
make DESTDIR=$PKG install
}

