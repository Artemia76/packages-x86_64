# Depends on: qt-svg kf5-kconfig kf5-kconfigwidgets kf5-kcoreaddons kf5-ki18n kf5-kitemviews kf5-kwidgetsaddons

description="Support for icon themes "
url="https://www.kde.org/"
packager="pierre at nutyx dot org"
alias=(kiconthemes)

_name=kiconthemes
release=1

build() {
cd ${_name}-$version
mkdir build
cd    build
cmake -DCMAKE_INSTALL_PREFIX=/usr \
      -DCMAKE_BUILD_TYPE=Release  \
      -DLIB_INSTALL_DIR=lib       \
      -DBUILD_TESTING=OFF         \
      -Wno-dev ..
make
make DESTDIR=$PKG install
}

