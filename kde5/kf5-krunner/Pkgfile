# Description : Parts of framework 5
# URL: https://www.kde.org/
# Packager: pierre at nutyx dot org
# Depends on: kf5-kross kf5-plasma-framework kf5-kconfig kf5-threadweaver
name=kf5-krunner
_name=krunner
release=3
source=(http://download.kde.org/stable/frameworks/${version%.*}/portingAids/${_name}-$version.tar.xz)

build() {
cd ${_name}-$version
mkdir build
cd    build
cmake -DCMAKE_INSTALL_PREFIX=/usr             \
      -DCMAKE_BUILD_TYPE=Release              \
      -DLIB_INSTALL_DIR=lib                   \
      -DBUILD_TESTING=OFF                     \
      -DQT_PLUGIN_INSTALL_DIR=lib/qt5/plugins \
      -DQML_INSTALL_DIR=lib/qt5/qml           \
      -Wno-dev -DKDE_INSTALL_USE_QT_SYS_PATHS=ON ..
make
make DESTDIR=$PKG install
}

