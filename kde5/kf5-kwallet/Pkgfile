# Depends on: gpgmepp kf5-kconfig kf5-kcoreaddons kf5-klidbusaddons kf5-ki18n kf5-kiconthemes kf5-knotifications kf5-kservice kf5-kwidgetsaddons kf5-kwindowsystem libgcrypt gnupg gpgmepp

description="Secure and unified container for user passwords"
url="https://www.kde.org/"
packager="pierre at nutyx dot org"
alias=(kwallet)

run=(libgcrypt gnupg gpgmepp)

_name=kwallet
release=7

build() {
mkdir build
cd    build
cmake ../kwallet-$version \
    -DCMAKE_BUILD_TYPE=Release        \
    -DCMAKE_INSTALL_PREFIX=/usr       \
    -DLIB_INSTALL_DIR=lib \
    -DBUILD_TESTING=OFF   \
    -Wno-dev
make
make DESTDIR=$PKG install
}

