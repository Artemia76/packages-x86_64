# Depends on: kparts extra-cmake-modules

description="Plugin interface for media player features"
url="https://www.kde.org/"
packager="rems at nutyx dot org"
contributors="Pierre B"
alias=(kmediaplayer)

name=kmediaplayer
version=5.53.0

source=(http://download.kde.org/stable/frameworks/${version%.*}/portingAids/$name-$version.tar.xz)

build() {
cd $name-$version
mkdir build
cd    build
cmake -DCMAKE_INSTALL_PREFIX=/usr \
      -DCMAKE_BUILD_TYPE=Release  \
      -DKDE_INSTALL_LIBDIR=lib       \
      -DBUILD_TESTING=OFF         \
      -Wno-dev ..
make
make DESTDIR=$PKG install
}

