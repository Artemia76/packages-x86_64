# Depends on: frameworkintegration kcmutils kcompletion kconfig kconfigwidgets kcoreaddons kguiaddons ki18n kwidgetsaddons kwindowsystem kwayland kdecoration libxcb

description="KDE Oxygen style "
url="https://www.kde.org/"
packager="itnut <tnut@nutyx.org"
contributors="Pierre B"

name=oxygen
version=5.10.5
release=1

source=(https://download.kde.org/stable/plasma/$version/$name-$version.tar.xz)

build() {
cd $name-$version
mkdir build
cd    build
cmake -DCMAKE_INSTALL_PREFIX=/usr \
      -DCMAKE_BUILD_TYPE=Release  \
      -DBUILD_TESTING=OFF         \
      -Wno-dev ..
make
make DESTDIR=$PKG install
}
