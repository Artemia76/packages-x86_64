# Description : Parts of framework 5
# URL: https://www.kde.org/
# Packager: pierre at nutyx dot org
# Depends on: kf5-bluez-qt kf5-kded kf5-plasma-framework 

name=plasma-bluedevil
_name=bluedevil
release=1
version=5.3.2
_version=5.3.2
source=(http://download.kde.org/stable/plasma/${_version}/${_name}-$version.tar.xz
        http://www.linuxfromscratch.org/patches/blfs/systemd/bluedevil-5.3.1-bluezqt_api_changes-1.patch)

build() {
cd ${_name}-$version

patch -Np1 -i ../bluedevil-5.3.1-bluezqt_api_changes-1.patch

mkdir build
cd    build
cmake -DCMAKE_INSTALL_PREFIX=/usr             \
      -DCMAKE_BUILD_TYPE=Release              \
      -DLIB_INSTALL_DIR=lib                   \
      -DBUILD_TESTING=OFF                     \
      -DQT_PLUGIN_INSTALL_DIR=lib/qt5/plugins \
      -DQML_INSTALL_DIR=lib/qt5/qml           \
      -Wno-dev ..
make
make DESTDIR=$PKG install
}

