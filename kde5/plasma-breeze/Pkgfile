# Description : Artwork, styles and assets for the Breeze visual style for the Plasma Desktop 
# URL: https://www.kde.org/
# Packager: pierre at nutyx dot org
# Depends on: kf5-plasma-framework kf5-frameworkintegration kf5-kcmutils kf5-kconfig kf5-kconfigwidgets kf5-kcoreaddons kf5-kguiaddons kf5-ki18n kf5-kwidgetsaddons kf5-kwindowsystem plasma-kdecoration libxcb plasma-kde-cli-tools kf5-kwayland

_name=breeze
release=1

build() {
cd ${_name}-$version
mkdir build
cd    build
cmake -DCMAKE_INSTALL_PREFIX=/usr \
      -DCMAKE_BUILD_TYPE=Release  \
      -DLIB_INSTALL_DIR=lib       \
      -DBUILD_TESTING=OFF         \
      -Wno-dev ..
make
make DESTDIR=$PKG install
}
