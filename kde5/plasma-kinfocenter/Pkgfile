# Description : A utility that provides information about a computer system 
# URL: https://www.kde.org/
# Packager: pierre at nutyx dot org
# Depends on: kf5-kcmutils kf5-kcompletion kf5-kconfig kf5-kconfigwidgets kf5-kcoreaddons kf5-kdbusaddons kf5-kdeclarative kf5-kdelibs4support kf5-ki18n kf5-kiconthemes kf5-kio kf5-kpackage kf5-kservice kf5-kwidgetsaddons kf5-kxmlgui kf5-solid 

_name=kinfocenter
release=3

build() {
cd ${_name}-$version
mkdir build
cd    build
cmake -DCMAKE_INSTALL_PREFIX=/usr             \
      -DCMAKE_BUILD_TYPE=Release              \
      -DLIB_INSTALL_DIR=lib                   \
      -DBUILD_TESTING=OFF                     \
      -DQT_PLUGIN_INSTALL_DIR=lib/qt5/plugins \
      -DKDE_INSTALL_USE_QT_SYS_PATHS=ON       \
      -Wno-dev ..
make
make DESTDIR=$PKG install
}
