# Description : KDE5 system fonts
# URL: https://www.kde.org/
# Packager: pierre at nutyx dot org
# Depends on: cmake kf5-extra-cmake-modules fontforge

name=plasma-oxygen-fonts
_name=oxygen-fonts
release=1
version=5.3.2
source=(http://download.kde.org/stable/plasma/$version/${_name}-$version.tar.xz)

build() {
cd ${_name}-$version
mkdir build
cd    build
cmake -DCMAKE_INSTALL_PREFIX=/usr                                \
      -DLIB_INSTALL_DIR=lib                                      \
      -DOXYGEN_FONT_INSTALL_DIR=/usr/share/fonts/truetype/oxygen \
      -Wno-dev ..
make
make DESTDIR=$PKG install
}
