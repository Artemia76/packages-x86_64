# Description : Parts of framework 5
# URL: https://www.kde.org/
# Packager: pierre at nutyx dot org
# Depends on: plasma-framework kf5-ktexteditor kf5-knewstuff qt5 kf5-extra-cmake-modules 
name=plasma-sdk
release=1
version=5.3.2
_version=5.3.2
source=(http://download.kde.org/stable/plasma/${_version}/$name-$version.tar.xz)

build() {
source /usr/bin/setqt5 &&
cd $name-$version
mkdir build
cd    build
cmake -DCMAKE_BUILD_TYPE=Release        \
      -DCMAKE_SKIP_RPATH=ON             \
      -DCMAKE_INSTALL_PREFIX=/usr       \
      -DKDE_INSTALL_USE_QT_SYS_PATHS=ON \
      -Wno-dev ..
make
make DESTDIR=$PKG install
}

