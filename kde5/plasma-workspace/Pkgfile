# Description : Parts of framework 5
# URL: https://www.kde.org/
# Packager: pierre at nutyx dot org
# Depends on: consolekit2 kf5-baloo kf5-kdesu kf5-kdewebkit kf5-kjsembed kf5-knotifyconfig kf5-krunner plasma-kwin kf5-kxmlrpcclient plasma-libkscreen plasma-libksysguard kf5-networkmanager-qt kf5-ktexteditor plasma-kwayland libdbusmenu-qt5 kio-extras kf5-kactivities

run=(kio-extras consolekit2)

_name=plasma-workspace
release=2

build() {
cd $name-$version
mkdir build
cd    build
cmake -DCMAKE_INSTALL_PREFIX=/usr             \
      -DCMAKE_BUILD_TYPE=Release              \
      -DLIB_INSTALL_DIR=lib                   \
      -DBUILD_TESTING=OFF                     \
      -DQT_PLUGIN_INSTALL_DIR=lib/qt5/plugins \
      -DQML_INSTALL_DIR=lib/qt5/qml           \
      -DKDE_INSTALL_USE_QT_SYS_PATHS=ON       \
      -Wno-dev ..
make
make DESTDIR=$PKG install

mkdir -p $PKG/usr/bin/
sed -i "s:qtpaths:&-qt5:g" $PKG/usr/bin/startkde

mkdir -p $PKG/etc/pam.d

cat > $PKG/etc/pam.d/kde << "EOF"
# Begin /etc/pam.d/kde

auth     include        system-auth
account  include        system-account
password include        system-password
session  include        system-session

# End /etc/pam.d/kde
EOF

install -v -dm755 $PKG/usr/share/xsessions
ln -sfv /usr/share/xsessions/plasma.desktop $PKG/usr/share/xsessions/kf5-plasma.desktop
}
