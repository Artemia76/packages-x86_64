# Description : Parts of framework 5
# URL: https://www.kde.org/
# Packager: pierre at nutyx dot org
# Depends on: baloo kdesu kdewebkit kjsembed knotifyconfig krunner kwin kxmlrpcclient libkscreen libksysguard networkmanager ktexteditor kwayland
name=plasma-workspace
release=1
version=5.3.2
_version=5.3.2
source=(http://download.kde.org/stable/plasma/${_version}/$name-$version.tar.xz)

build() {
cd $name-$version
mkdir build
cd    build
cmake -DCMAKE_INSTALL_PREFIX=$KF5_PREFIX  \
      -DCMAKE_BUILD_TYPE=Release          \
      -DLIB_INSTALL_DIR=lib               \
      -DBUILD_TESTING=OFF                 \
      -Wno-dev ..
make
make DESTDIR=$PKG install

mkdir -p $PKG/etc/pam.d

cat > $PKG/etc/pam.d/kde << "EOF"
# Begin /etc/pam.d/kde

auth     include        system-auth
account  include        system-account
password include        system-password
session  include        system-session

# End /etc/pam.d/kde
EOF
}

