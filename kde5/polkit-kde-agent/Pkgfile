# Description : Parts of framework 5
# URL: https://www.kde.org/
# Packager: pierre at nutyx dot org
# Depends on: knotifications polkit-qt5 
name=polkit-kde-agent
release=1
version=5.3.2
_version=5.3.2
source=(http://download.kde.org/stable/plasma/${_version}/$name-1-$version.tar.xz)

build() {
cd $name-1-$version
mkdir build
cd    build
cmake -DCMAKE_INSTALL_PREFIX=$KF5_PREFIX  \
      -DCMAKE_BUILD_TYPE=Release          \
      -DLIB_INSTALL_DIR=lib               \
      -DBUILD_TESTING=OFF                 \
      -Wno-dev ..
make
make DESTDIR=$PKG install
}

