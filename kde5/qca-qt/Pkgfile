# Depends on : qtbase nss cmake doxygen

description="Qt5 Cryptographic Architecture"
url="http://delta.affinix.com/qca/"
packager="tnut <tnut@nutyx.org>"
contributors="Pierre B"

name=qca-qt
version=2.1.3
release=2

source=( http://www.linuxfromscratch.org/patches/blfs/svn/qca-2.1.3-openssl-1.patch
	http://download.kde.org/stable/qca/$version/src/qca-$version.tar.xz)

prepare() {
mkdir build
cd qca-$version
patch -Np1 -i ../qca-2.1.3-openssl-1.patch
sed -i 's@cert.pem@certs/ca-bundle.crt@' CMakeLists.txt
}
build() {
cd build
cmake ../qca-$version             \
    -DCMAKE_INSTALL_PREFIX=/usr   \
    -DCMAKE_BUILD_TYPE=Release    \
    -DQCA_MAN_INSTALL_DIR=/usr/share/man
make
make DESTDIR=$PKG install

rm $PKG/usr/certs/rootcerts.pem
}

uptodate() {
feed=https://github.com/KDE/qca/releases.atom 
exec="lynx -read_timeout=20 -dump -listonly -nonumbers $feed"
ligne=1 # nombre de notification ? afficher
$exec $feed | grep title | \
sed "s@<title>@@" | \
sed "s@</title>@@" | \
sed "s@v@@" | \
head -n $(($ligne+1 )) | \
tail -n $(($ligne))
}
