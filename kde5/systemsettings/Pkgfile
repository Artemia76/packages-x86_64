# Depends on: qtsvg kauth kcmutils kcompletion kconfig kconfigwidgets kcoreaddons kdbusaddons khtml ki18n kiconthemes kio kitemviews kservice kwidgetsaddons kwindowsystem kxmlgui extra-cmake-modules kactivities kactivities-stats kirigami2

description="KDE system settings "
url="https://www.kde.org/"
packager="tnut <tnut@nutyx.org>"
contributors="Pierre B"

name=systemsettings
version=5.11.0

source=(https://download.kde.org/stable/plasma/$version/$name-$version.tar.xz)

build() {
cd ${name}-$version
mkdir build
cd    build
cmake -DCMAKE_INSTALL_PREFIX=/usr \
      -DCMAKE_BUILD_TYPE=Release  \
      -DKDE_INSTALL_LIBDIR=lib    \
      -DBUILD_TESTING=OFF         \
      -Wno-dev ..
make
make DESTDIR=$PKG install
}
