
_name=kmediaplayer
source=(http://download.kde.org/stable/frameworks/$version/portingAids/${_name}-$version.tar.xz )

build() {
cd ${_name}-$version
mkdir build
cd    build

cmake -DCMAKE_INSTALL_PREFIX=/usr \
      -DCMAKE_BUILD_TYPE=Release         \
      -DLIB_INSTALL_DIR=lib              \
      -DBUILD_TESTING=OFF                \
      -Wno-dev .. 

make
make DESTDIR=$PKG install
}
