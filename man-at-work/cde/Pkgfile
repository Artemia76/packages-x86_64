description='The Common desktop Environment (CDE)'
url='https://sourceforge.net/projects/cdesktopenv/'

packager="tnut <tnut@nutyx.org>"

makedepends=(m4 tcl flex bison ksh ncompress printproto rpcsvc-proto libjpeg-turbo libtirpc
             libutempter openmotif pam xorg-libice xorg-libsm xorg-libx11 xorg-libxau
             xorg-libxdmcp xorg-libxext xorg-bdftopcf xorg-mkfontscale xorg-libxaw
             xorg-libxinerama xorg-libxmu xorg-libxpm xorg-libxscrnsaver xorg-libxt)

run=(font-adobe-100dpi font-adobe-utopia-100dpi font-bh-100dpi font-bitstream-100dpi
     font-bh-lucidatypewriter-100dpi)

name=cde
version=2.4.0

source=(https://sourceforge.net/projects/cdesktopenv/files/src/$name-$version.tar.gz)
prepare() {
localedef -i en_US -f UTF-8 en_US.UTF-8
}
build() {
cd $name-$version
{
  export LANG=en_US.utf-8
  export LC_ALL=en_US.utf-8
  export CDE_INSTALLATION_TOP="$PKG/usr/lib/dt"
  export LOGFILES_LOCATION="$PKG/var/dt"
  export CONFIGURE_LOCATION="$PKG/etc/dt"
  make -j1 World
  admin/IntegTools/dbTools/installCDE -s `pwd` -destdir $PKG
}

mkdir -p $PKG/usr/share/xsessions
cp contrib/desktopentry/cde.desktop \
$PKG/usr/share/xsessions

}
