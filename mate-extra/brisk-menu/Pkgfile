# Depends on: git mate-desktop mate-menus mate-panel meson ninja

description="Brisk menu an efficient menu for the MATE"
url="https://github.com/solus-project/brisk-menu"
packager="tnut <tnut@nutyx.org>"
contributors="jayce, Greg"

name=brisk-menu
version=git



build() {
	git clone https://github.com/getsolus/brisk-menu.git	
	cd $name
	mkdir build
	cd    build
	meson --prefix=/usr
	ninja
	DESTDIR=$PKG ninja install
}
uptodate() {
	
feed=https://github.com/solus-project/$name/releases.atom 
exec="lynx -read_timeout=20 -dump -listonly -nonumbers $feed"
ligne=1 # nombre de notification ? afficher
$exec $feed | grep title | \
sed "s@<title>@@" | \
sed "s@</title>@@" | \
sed "s@Brisk Menu @@" | sed "s@ @@g" | \
head -n $(($ligne+1 )) | \
tail -n $(($ligne))
 
}
