# Depends on: mate-desktop mate-menus mate-panel

description="Brisk menu an efficient menu for the MATE"
url="https://github.com/solus-project/brisk-menu"
packager="jayce <jayce.net@gmail.com>"

name=brisk-menu
version=0.4.5
release=1

source=(https://github.com/solus-project/$name/releases/download/v$version/$name-$version.tar.xz)

uptodate() {
feed=https://github.com/solus-project/$name/releases.atom 
exec="lynx -read_timeout=20 -dump -listonly -nonumbers $feed"
ligne=1 # nombre de notification ? afficher
$exec $feed | grep title | \
sed "s@<title>@@" | \
sed "s@</title>@@" | \
sed "s@Brisk Menu @@" | \
head -n $(($ligne+1 )) | \
tail -n $(($ligne)) 
}
