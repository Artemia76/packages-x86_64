# Depends on: gtk3

description="Mate calculator"
url="https://mate-desktop.org/"
packager="greg <greg@nutyx.org>"
contributors="fanch,tnut"

name=mate-calc
version=1.18.0
release=1

source=(http://pub.mate-desktop.org/releases/${version%.*}/$name-$version.tar.xz)

build() {

  cd $name-$version
  ./configure \
          --prefix=/usr
  make
  make DESTDIR=$PKG install
  
}
