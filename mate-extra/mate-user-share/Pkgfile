# Depends on: apache bluez caja dconf gdk-pixbuf gtk3 libnotify libcanberra libunique1 mod-dnssd

description="User level public file sharing via WebDAV for MATE"
url="https://mate-desktop.org/"
packager="fanchyannmaria at orange dot fr, tnut at nutyx dot org, jayce dot net at gmail dot com"
name=mate-user-share
version=1.18.0
release=1
source=(http://pub.mate-desktop.org/releases/${version%.*}/$name-$version.tar.xz)

build() {
  cd $name-$version
  ./configure   \
          --prefix=/usr \
          --libexec=/usr/lib/${name} \
          --sysconfdir=/etc \
          --disable-bluetooth
  make
  make DESTDIR=$PKG install
}
