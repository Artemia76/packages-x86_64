# Depends on: gtk3 mate-panel libgtop

description="Common MATE utilities for viewing disk usage"
url="https://mate-desktop.org/"
packager="tnut <tnut@nutyx.org>"
contributors="Fanch, Tnut, Jayce, Greg"

name=mate-utils
version=1.22.2

source=(http://pub.mate-desktop.org/releases/${version%.*}/$name-$version.tar.xz)

build() {

  unset MAKEFLAGS
  cd $name-$version
  ./configure \
          --prefix=/usr \
          --libexecdir=/usr/lib/${name} \
          --sysconfdir=/etc \
          --disable-maintainer-flags
  make
  sed -i -e 's/ -shared / -Wl,-O1,--as-needed\0/g' libtool
  make DESTDIR=$PKG install

  # Obsolet lib
  rm $PKG/usr/lib/libmatedict.la
  
}

uptodate() {
feed=https://github.com/mate-desktop/$name/releases.atom 
exec="lynx -read_timeout=20 -dump -listonly -nonumbers $feed"
$exec $feed | grep release | grep title | \
sed -e "s@<title>$name @@" -e "s@ release</title>@@"  \
-e "s@ @@g" | head -1
}
