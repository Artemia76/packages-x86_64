# Depends on: mate-desktop gtk3 libcanberra libgtop startup-notification zenity

description="A window manager for MATE"
url="https://mate-desktop.org/"
packager="fanchyannmaria at orange dot fr, tnut at nutyx dot org, jayce dot net at gmail dot com"
name=marco
version=1.18.1
release=1
source=(http://pub.mate-desktop.org/releases/${version%.*}/$name-$version.tar.xz)

build() {
  cd $name-$version
  ./configure \
          --prefix=/usr \
          --sysconfdir=/etc \
          --localstatedir=/var \
          --with-gtk=3.0 \
          --enable-startup-notification \
          --disable-static
  make
  make DESTDIR=$PKG install
}
