# Depends on: gobject-introspection gtk3 libcanberra libunique1 libxml2 mate-desktop mate-libmixer marco

description="MATE Media Tools (GStreamer)"
url="https://mate-desktop.org/"
packager="fanchyannmaria at orange dot fr, tnut at nutyx dot org, jayce dot net at gmail dot com"
name=mate-media
version=1.18.1
release=1
source=(http://pub.mate-desktop.org/releases/${version%.*}/$name-$version.tar.xz)

build() {
  cd $name-$version
  ./configure \
          --prefix=/usr \
          --sysconfdir=/etc \
          --libexecdir=/usr/lib/${name} \
          --localstatedir=/var \
          --disable-static
      make
  make
  make DESTDIR=$PKG install
}
