# Description: Default themes for MATE desktop
# URL: http://matsusoft.com.ar/projects/mate
# Packager: fanchyannmaria at orange dot fr, tnut at nutyx dot org, jayce dot net at gmail dot com
# Depends on: gtk2


name=mate-themes
version=3.22.11
release=1
source=(http://pub.mate-desktop.org/releases/themes/${version%.*}/${name}-${version}.tar.xz)

build() {
	cd ${name}-${version}
    ./configure \
        --prefix=/usr 
make
make DESTDIR=$PKG install
}
