version=5.1.0.1
_name=baloo
source=(http://download.kde.org/stable/plasma/5.1.0/baloo-$version.tar.xz)

build() {
cd ${_name}*
sed -i "s|ecm_optional_add_subdirectory(po)|#ecm_optional_add_subdirectory(po)|" CMakeLists.txt
mkdir build
cd    build
cmake -DCMAKE_INSTALL_PREFIX=/usr             \
      -DCMAKE_BUILD_TYPE=Release              \
      -DSYSCONF_INSTALL_DIR=/etc/kf5          \
      -DLIB_INSTALL_DIR=lib                   \
      -DBUILD_TESTING=OFF                     \
      -DQML_INSTALL_DIR=lib/qt5/qml           \
      -DQT_PLUGIN_INSTALL_DIR=lib/qt5/plugins \
      .. 
make
make DESTDIR=$PKG install

#rm $PKG/lib/usr/share/polkit-1/actions/org.kde.baloo.filewatch.policy
}
