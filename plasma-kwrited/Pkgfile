version=5.1.0.1
_name=kwrited
source=(http://download.kde.org/stable/plasma/5.1.0/kwrited-$version.tar.xz)

build() {
cd ${_name}*
mkdir build
cd    build
cmake -DCMAKE_INSTALL_PREFIX=/usr    \
      -DCMAKE_BUILD_TYPE=Release            \
      -DSYSCONF_INSTALL_DIR=/etc/kf5 \
      -DLIB_INSTALL_DIR=lib                 \
      -DBUILD_TESTING=OFF                   \
      -Wno-dev .. 
make
make DESTDIR=$PKG install
}
