version=5.1.0.1
_name=oxygen-fonts
source=(http://download.kde.org/stable/plasma/5.1.0/${_name}-$version.tar.xz )

build() {
cd ${_name}*
mkdir build
cd    build
cmake -DCMAKE_INSTALL_PREFIX=/usr      \
      -DLIB_INSTALL_DIR=lib                   \
      -DOXYGEN_FONT_INSTALL_DIR=/usr/share/fonts/truetype/oxygen \
      -Wno-dev .. 
make
make DESTDIR=$PKG install
}
