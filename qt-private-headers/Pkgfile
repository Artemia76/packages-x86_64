version=4.8.6
source=(
http://download.qt-project.org/official_releases/qt/4.8/$version/qt-everywhere-opensource-src-$version.tar.gz)

build(){
    cd qt-everywhere-opensource-src-$version
    install -d $PKG/usr/include/{QtCore,QtDeclarative,QtGui,QtScript}
    install -d $PKG/usr/src/{corelib,declarative,gui,script}

    for i in QtCore QtDeclarative QtGui QtScript; do
        cp -r include/$i/private/ $PKG/usr/include/$i/
    done

    find $PKG/usr/include/ -name *.h \
        -exec sed -i 's|#include "../../../src/|#include "../../../usr/src/|' {} \;

    for i in corelib declarative gui script; do
        cp -r src/$i $PKG/usr/src/
    done
}

# NuTyX Pkgfile (http://nutyx.org)
