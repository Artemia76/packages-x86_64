name=gnutls
version=3.4.8
build() {
cd $name-$version
./configure --prefix=/tools \
            --with-default-trust-store-file=/etc/ssl/ca-bundle.crt \
            --with-included-libtasn1 \
            --enable-static \
            --build=${CLFS_HOST} \
            --host=${CLFS_TARGET} \
            --without-p11-kit
make
make install
}
