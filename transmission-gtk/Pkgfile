version=2.84
source=(http://download-origin.transmissionbt.com/files/transmission-$version.tar.xz)

build() {
	cd transmission-$version
	./configure --prefix=/usr \
                --disable-cli \
                --disable-daemon \
                --without-qt \
                --with-gtk
	make
	make DESTDIR=$PKG install

    # remove files which are installed with transmission-cli
    rm -r $PKG/usr/share/transmission/web
    rm $PKG/usr/share/man/man1/transmission-create.1
    rm $PKG/usr/share/man/man1/transmission-edit.1
    rm $PKG/usr/share/man/man1/transmission-show.1
    rm $PKG/usr/bin/transmission-edit
    rm $PKG/usr/bin/transmission-show
    rm $PKG/usr/bin/transmission-create

}
