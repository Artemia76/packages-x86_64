# Depends on: exo libwnck2 xfce4-libui thunar xfce4-garcon

description="A desktop manager for Xfce"
url="http://www.xfce.org"
packager="tnut <tnut@nutyx.org>"
contributors="Tyrry, Tnut, Greg"

run=(gtk-update-icon-cache)

name=xfce4-desktop
_name=xfdesktop
version=4.12.4
release=2

source=(http://archive.xfce.org/src/xfce/${_name}/4.12/${_name}-$version.tar.bz2
        http://downloads.nutyx.org/WallPapers/xfce_NuTyX.jpg)

build() {

cd ${_name}-$version

sed -i "s/xfce-teal.jpg/xfce-nutyx.jpg/" common/xfdesktop-common.h

./configure \
    --prefix=/usr \
    --sysconfdir=/etc \
    --libexecdir=/usr/lib \
    --localstatedir=/var \
    --disable-static \
    --enable-gio-unix \
    --enable-thunarx \
    --enable-notifications \
    --disable-debug
    
make
make DESTDIR=$PKG install

install -D -m644 ../xfce_NuTyX.jpg \
$PKG/usr/share/backgrounds/xfce/xfce-nutyx.jpg

}
