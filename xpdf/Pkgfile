version=3.04
source=(ftp://ftp.foolabs.com/pub/$name/$name-$version.tar.gz 
        xpdf.desktop)                                      

build() {
        cd $name-$version
        ./configure --prefix=/usr  \
                --mandir=/usr/share/man \
                --enable-multithreaded \
                -with-freetype2-includes=/usr/include/freetype2
        make
        make DESTDIR=$PKG install
        mkdir -p $PKG/usr/share/applications
        mkdir -p $PKG/usr/share/pixmaps
        install -Dm644 $SRC/xpdf.desktop $PKG/usr/share/applications/xpdf.desktop
        install -Dm644 xpdf/xpdfIcon.xpm $PKG/usr/share/pixmaps/xpdf.xpm
        rm $PKG/usr/bin/pdf*
}
